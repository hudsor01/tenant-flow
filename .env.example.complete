# ==========================================
# COMPLETE ENVIRONMENT CONFIGURATION
# ==========================================
# This file contains ALL configuration values that should be externalized
# Copy this to .env.local and fill in your values

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================

# Environment: development | staging | production | test
NODE_ENV=development

# Application URLs
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
API_URL=http://localhost:3002
NEXT_PUBLIC_API_URL=http://localhost:3002/api

# Ports
PORT=3002
FRONTEND_PORT=3000

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# PostgreSQL Connection URLs
DATABASE_URL=postgresql://user:password@localhost:5432/tenantflow?pgbouncer=true
DIRECT_URL=postgresql://user:password@localhost:5432/tenantflow

# Database Pool Settings
DATABASE_POOL_MAX=10
DATABASE_POOL_MIN=2
DATABASE_POOL_TIMEOUT=30000

# ==========================================
# SUPABASE CONFIGURATION
# ==========================================

# Supabase Project Settings
SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# ==========================================
# STRIPE CONFIGURATION
# ==========================================

# Stripe API Keys
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_API_VERSION=2024-06-20

# Stripe Price IDs - Monthly Plans
STRIPE_STARTER_MONTHLY=price_starter_monthly
STRIPE_GROWTH_MONTHLY=price_growth_monthly
STRIPE_TENANTFLOW_MAX_MONTHLY=price_max_monthly

# Stripe Price IDs - Annual Plans
STRIPE_STARTER_ANNUAL=price_starter_annual
STRIPE_GROWTH_ANNUAL=price_growth_annual
STRIPE_TENANTFLOW_MAX_ANNUAL=price_max_annual

# Stripe Portal Configuration
STRIPE_PORTAL_RETURN_URL=http://localhost:3000/dashboard

# ==========================================
# EMAIL CONFIGURATION
# ==========================================

# Resend Configuration
RESEND_API_KEY=re_your-api-key
FROM_EMAIL=noreply@tenantflow.app
REPLY_TO_EMAIL=support@tenantflow.app

# Email Settings
EMAIL_ENABLED=true
EMAIL_RATE_LIMIT=100
EMAIL_RATE_WINDOW=3600000

# ==========================================
# ANALYTICS CONFIGURATION
# ==========================================

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=phc_your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
POSTHOG_API_KEY=phk_your-api-key
POSTHOG_PROJECT_ID=your-project-id

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ==========================================
# SECURITY CONFIGURATION
# ==========================================

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOW_LOCALHOST_CORS=true

# JWT Configuration
JWT_SECRET=your-jwt-secret
JWT_EXPIRATION=86400
REFRESH_TOKEN_EXPIRATION=604800

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
ENABLE_SECURITY_HEADERS=true
CSP_REPORT_URI=/api/csp-report

# ==========================================
# PERFORMANCE & OPTIMIZATION
# ==========================================

# Timeouts (in milliseconds)
API_TIMEOUT=30000
DATABASE_QUERY_TIMEOUT=10000
CHECKOUT_SESSION_TIMEOUT=8000
WEBHOOK_PROCESSING_TIMEOUT=3000

# Cache Settings
CACHE_TTL=300
REDIS_URL=redis://localhost:6379
ENABLE_CACHE=true

# Worker Pool
WORKER_POOL_SIZE=4
MAX_CONCURRENT_JOBS=10

# ==========================================
# MONITORING & LOGGING
# ==========================================

# Logging Levels: error | warn | info | debug | verbose
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=1.0.0

# Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# ==========================================
# DEVELOPMENT & TESTING
# ==========================================

# Development Servers
DEV_SERVER_PORTS=3000,3001,3002,5173,5174,5175

# Test Configuration
TEST_MODE=unit
ENABLE_MCP_STRIPE_TESTS=false
CLEANUP_STRIPE_TESTS=true
STRIPE_TEST_SECRET_KEY=sk_test_your-test-key
STRIPE_TEST_PUBLISHABLE_KEY=pk_test_your-test-key
STRIPE_TEST_WEBHOOK_SECRET=whsec_test_your-webhook-secret

# Playwright Testing
PLAYWRIGHT_BASE_URL=http://localhost:3000
PLAYWRIGHT_TEST_BASE_URL=http://localhost:3000
E2E_BASE_URL=http://localhost:3000

# ==========================================
# DEPLOYMENT & CI/CD
# ==========================================

# Vercel Configuration
VERCEL_ENV=development
VERCEL_URL=
VERCEL_GIT_COMMIT_SHA=
VERCEL_GIT_COMMIT_MESSAGE=

# Railway Configuration
RAILWAY_ENVIRONMENT=development
RAILWAY_PROJECT_ID=
RAILWAY_SERVICE_ID=

# GitHub Actions
CI=false
GITHUB_ACTIONS=false

# ==========================================
# FEATURE FLAGS
# ==========================================

# Feature Toggles
ENABLE_TENANT_PORTAL=true
ENABLE_MAINTENANCE_MODULE=true
ENABLE_PAYMENT_PROCESSING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBHOOKS=true
ENABLE_API_RATE_LIMITING=true

# Beta Features
ENABLE_BETA_FEATURES=false
BETA_USER_EMAILS=

# ==========================================
# THIRD-PARTY INTEGRATIONS
# ==========================================

# Twilio (SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# AWS S3 (File Storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# Cloudinary (Image Management)
CLOUDINARY_URL=
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ==========================================
# TURBO REPO CONFIGURATION
# ==========================================

TURBO_TOKEN=
TURBO_TEAM=
TURBO_REMOTE_CACHE_SIGNATURE_KEY=
FORCE_COLOR=3

# ==========================================
# NOTES
# ==========================================
# 1. Never commit this file with real values
# 2. Use .env.local for local development
# 3. Use environment-specific files (.env.production, .env.staging)
# 4. Ensure all secrets are properly secured in production
# 5. Update this template when adding new environment variables