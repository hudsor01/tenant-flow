{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"cacheDir": ".turbo",
	"concurrency": "10",
	"remoteCache": {
		"enabled": false
	},
	"envMode": "loose",
	"globalEnv": [
		"CI",
		"NODE_ENV",
		"npm_package_version",
		"SUPABASE_ANON_KEY",
		"TEST_USER_ID",
		"SUPABASE_URL",
		"SUPABASE_SERVICE_ROLE_KEY"
	],
	"globalPassThroughEnv": ["CI", "NODE_ENV", "VERCEL_*", "GITHUB_*"],
	"globalDependencies": [
		"**/.env.*",
		".prettierrc",
		"eslint.config.*",
		"pnpm-lock.yaml",
		"vercel.json"
	],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**"]
		},
		"@repo/shared#build": {
			"dependsOn": [],
			"inputs": [
				"src/**",
				"tsconfig*.json",
				"package.json",
				"!**/*.md",
				"!**/*.test.*",
				"!**/*.spec.*"
			],
			"outputs": ["dist/**"],
			"cache": true,
			"persistent": false
		},
		"@repo/ui#build": {
			"dependsOn": ["^build"],
			"inputs": [
				"src/**",
				"tsconfig*.json",
				"package.json",
				"!**/*.md",
				"!**/*.test.*",
				"!**/*.spec.*"
			],
			"outputs": ["dist/**"],
			"cache": true,
			"persistent": false
		},
		"@repo/api-client#build": {
			"dependsOn": ["^build"],
			"inputs": [
				"src/**",
				"tsconfig*.json",
				"package.json",
				"!**/*.md",
				"!**/*.test.*",
				"!**/*.spec.*"
			],
			"outputs": ["dist/**"],
			"cache": true,
			"persistent": false
		},
		"@repo/config#build": {
			"dependsOn": ["^build"],
			"inputs": [
				"src/**",
				"tsconfig*.json",
				"package.json",
				"!**/*.md",
				"!**/*.test.*",
				"!**/*.spec.*"
			],
			"outputs": ["dist/**"],
			"cache": true,
			"persistent": false
		},
		"@repo/testing#build": {
			"dependsOn": ["^build"],
			"inputs": [
				"src/**",
				"tsconfig*.json",
				"package.json",
				"!**/*.md",
				"!**/*.test.*",
				"!**/*.spec.*"
			],
			"outputs": ["dist/**"],
			"cache": true,
			"persistent": false
		},
		"@repo/database#build": {
			"dependsOn": [],
			"inputs": [
				"src/**",
				"tsconfig*.json",
				"package.json",
				"!**/*.md",
				"!**/*.test.*",
				"!**/*.spec.*"
			],
			"outputs": ["dist/**"],
			"cache": true,
			"persistent": false
		},
		"@repo/eslint-config#build": {
			"dependsOn": [],
			"inputs": ["*.js", "package.json"],
			"outputs": [],
			"cache": true,
			"persistent": false
		},
		"@repo/typescript-config#build": {
			"dependsOn": [],
			"inputs": ["*.json", "package.json"],
			"outputs": [],
			"cache": true,
			"persistent": false
		},
		"@repo/frontend#build": {
			"dependsOn": ["^build", "lint", "typecheck"],
			"inputs": [
				"src/**",
				"public/**",
				"next.config.ts",
				"tsconfig*.json",
				"package.json"
			],
			"outputs": [".next/**", "!.next/cache/**", ".vercel/output/**"],
			"env": [
				"NEXT_PUBLIC_*",
				"VERCEL",
				"VERCEL_ENV",
				"SECURITY_MONITORING_WEBHOOK",
				"SECURITY_MONITORING_TOKEN"
			],
			"cache": true,
			"persistent": false
		},
		"@repo/backend#build": {
			"dependsOn": ["^build", "lint", "typecheck"],
			"inputs": ["src/**", "tsconfig*.json", "package.json", "nest-cli.json"],
			"outputs": ["dist/**"],
			"env": [
				"STRIPE_SECRET_KEY",
				"STRIPE_WEBHOOK_SECRET",
				"DATABASE_URL",
				"SUPABASE_URL",
				"SUPABASE_SERVICE_ROLE_KEY",
				"JWT_SECRET"
			],
			"cache": true,
			"persistent": false
		},
		"@repo/backend#lint": {
			"dependsOn": [],
			"inputs": ["src/**/*.{ts,tsx,js,jsx}", "eslint.config.*", "package.json"],
			"outputs": [],
			"env": [
				"STRIPE_SECRET_KEY",
				"STRIPE_WEBHOOK_SECRET",
				"DATABASE_URL",
				"SUPABASE_URL",
				"SUPABASE_SERVICE_ROLE_KEY",
				"JWT_SECRET",
				"TEST_DATABASE_URL",
				"TEST_SUPABASE_URL",
				"TEST_SERVICE_ROLE_KEY",
				"TEST_SUPABASE_JWT_SECRET",
				"TEST_JWT_SECRET",
				"TEST_SUPABASE_ANON_KEY",
				"ENABLE_DATA_VALIDATION_TESTS",
				"NEXT_PUBLIC_APP_URL",
				"STRIPE_SYNC_DATABASE_SCHEMA",
				"STRIPE_SYNC_AUTO_EXPAND_LISTS",
				"TEST_STRIPE_SECRET_KEY",
				"SUPABASE_JWT_SECRET",
				"SUPABASE_ANON_KEY",
				"TEST_RESEND_API_KEY",
				"TEST_EMAIL_FROM",
				"DIRECT_URL",
				"SERVICE_ROLE_KEY",
				"SUPABASE_SERVICE_KEY",
				"RESEND_API_KEY",
				"SUPPORT_EMAIL",
				"SUPABASE_RPC_TEST_USER_ID",
				"SUPABASE_PROJECT_REF",
				"CORS_ORIGINS",
				"BACKEND_TIMEOUT_MS",
				"PORT",
				"ENABLE_REPORT_SCHEDULER",
				"FRONTEND_URL",
				"HEALTH_CHECK_FUNCTION",
				"PUBLIC_CACHE_MAX_AGE",
				"STRIPE_PUBLISHABLE_KEY",
				"TEST_DATABASE_HOST",
				"TEST_DATABASE_PORT",
				"TEST_DATABASE_NAME",
				"TEST_DATABASE_USER",
				"TEST_DATABASE_PASSWORD",
				"E2E_DATABASE_URL",
				"E2E_DATABASE_HOST",
				"E2E_DATABASE_PORT",
				"E2E_DATABASE_NAME",
				"E2E_DATABASE_USER",
				"E2E_DATABASE_PASSWORD",
				"SUPABASE_ANON_KEY",
				"TEST_USER_ID",
				"SUPABASE_JWT_SECRET"
			],
			"cache": true,
			"persistent": false
		},
		"@repo/backend#test:unit": {
			"dependsOn": ["^build"],
			"inputs": ["src/**/*.{test,spec}.ts", "jest.config.*", "package.json"],
			"outputs": ["coverage/**"],
			"env": [
				"STRIPE_SECRET_KEY",
				"STRIPE_WEBHOOK_SECRET",
				"DATABASE_URL",
				"SUPABASE_URL",
				"SUPABASE_SERVICE_ROLE_KEY",
				"JWT_SECRET"
			],
			"cache": true,
			"persistent": false
		},
		"@repo/backend#test:integration": {
			"dependsOn": ["^build"],
			"inputs": [
				"src/**/*.integration.spec.ts",
				"jest.config.*",
				"package.json"
			],
			"outputs": ["coverage/**"],
			"env": [
				"STRIPE_SECRET_KEY",
				"STRIPE_WEBHOOK_SECRET",
				"DATABASE_URL",
				"SUPABASE_URL",
				"SUPABASE_SERVICE_ROLE_KEY",
				"JWT_SECRET"
			],
			"cache": true,
			"persistent": false
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"env": [
				"STRIPE_SECRET_KEY",
				"STRIPE_WEBHOOK_SECRET",
				"DATABASE_URL",
				"SUPABASE_URL",
				"SUPABASE_SERVICE_ROLE_KEY",
				"JWT_SECRET"
			]
		},
		"lint": {
			"outputs": []
		},
		"lint:fix": {
			"inputs": [
				"src/**/*.{ts,tsx,js,jsx}",
				"app/**/*.{ts,tsx,js,jsx}",
				"eslint.config.*",
				"!node_modules/**",
				"!dist/**",
				"!.next/**"
			],
			"outputs": [],
			"cache": false,
			"persistent": false
		},
		"format": {
			"inputs": [
				"src/**/*.{ts,tsx,js,jsx}",
				"app/**/*.{ts,tsx,js,jsx}",
				"prettier.config.*",
				"!node_modules/**",
				"!dist/**",
				"!.next/**"
			],
			"outputs": [],
			"cache": false,
			"persistent": false
		},
		"format:check": {
			"inputs": [
				"src/**/*.{ts,tsx,js,jsx}",
				"app/**/*.{ts,tsx,js,jsx}",
				".prettierrc*",
				"prettier.config.*",
				"!node_modules/**",
				"!dist/**",
				"!.next/**"
			],
			"outputs": [],
			"cache": false,
			"persistent": false
		},
		"@repo/frontend#typecheck": {
			"dependsOn": ["^build"],
			"inputs": ["src/**", "tsconfig*.json", "package.json"],
			"outputs": [],
			"cache": true,
			"persistent": false
		},
		"@repo/backend#typecheck": {
			"dependsOn": ["^build"],
			"inputs": ["src/**", "tsconfig*.json", "package.json"],
			"outputs": [],
			"env": [
				"STRIPE_SECRET_KEY",
				"STRIPE_WEBHOOK_SECRET",
				"DATABASE_URL",
				"SUPABASE_URL",
				"SUPABASE_SERVICE_ROLE_KEY",
				"JWT_SECRET"
			],
			"cache": true,
			"persistent": false
		},
		"@repo/shared#typecheck": {
			"dependsOn": [],
			"inputs": ["src/**/*.ts", "tsconfig*.json", "package.json"],
			"outputs": ["dist/.tsbuildinfo"],
			"cache": true,
			"persistent": false
		},
		"@repo/ui#typecheck": {
			"dependsOn": ["^build"],
			"inputs": ["src/**/*.{ts,tsx}", "tsconfig*.json", "package.json"],
			"outputs": [],
			"cache": true,
			"persistent": false
		},
		"@repo/api-client#typecheck": {
			"dependsOn": ["^build"],
			"inputs": ["src/**/*.ts", "tsconfig*.json", "package.json"],
			"outputs": [],
			"cache": true,
			"persistent": false
		},
		"@repo/config#typecheck": {
			"dependsOn": ["^build"],
			"inputs": ["src/**/*.ts", "tsconfig*.json", "package.json"],
			"outputs": [],
			"cache": true,
			"persistent": false
		},
		"@repo/testing#typecheck": {
			"dependsOn": ["^build"],
			"inputs": ["src/**/*.ts", "tsconfig*.json", "package.json"],
			"outputs": [],
			"cache": true,
			"persistent": false
		},
		"@repo/shared#lint": {
			"dependsOn": [],
			"inputs": ["src/**/*.ts", "eslint.config.*", "package.json"],
			"outputs": [],
			"env": [
				"NEXT_PUBLIC_SUPABASE_URL",
				"NEXT_PUBLIC_SUPABASE_ANON_KEY",
				"SUPABASE_ANON_KEY",
				"SUPABASE_SERVICE_KEY",
				"VERCEL",
				"NEXT_PUBLIC_APP_URL",
				"NEXT_PUBLIC_API_BASE_URL",
				"NEXT_PUBLIC_STRIPE_STARTER_MONTHLY",
				"NEXT_PUBLIC_STRIPE_STARTER_ANNUAL",
				"NEXT_PUBLIC_STRIPE_GROWTH_MONTHLY",
				"NEXT_PUBLIC_STRIPE_GROWTH_ANNUAL",
				"NEXT_PUBLIC_STRIPE_ENTERPRISE_MONTHLY",
				"NEXT_PUBLIC_STRIPE_ENTERPRISE_ANNUAL"
			],
			"cache": true,
			"persistent": false
		},
		"@repo/shared#lint:fix": {
			"inputs": ["src/**/*.{ts,tsx}", "eslint.config.*", "package.json"],
			"outputs": [],
			"cache": false,
			"persistent": false
		},
		"@repo/e2e-tests#lint": {
			"dependsOn": [],
			"inputs": [
				"tests/**/*.{ts,tsx,js,jsx}",
				"eslint.config.*",
				"package.json"
			],
			"outputs": [],
			"env": [
				"NEXT_PUBLIC_SUPABASE_URL",
				"NEXT_PUBLIC_SUPABASE_ANON_KEY",
				"PLAYWRIGHT_BACKEND_HEALTH_URL",
				"BACKEND_HEALTH_URL",
				"PROD_HEALTH_URL",
				"STAGING_BASE_URL",
				"PLAYWRIGHT_BASE_URL",
				"E2E_BASE_URL",
				"STAGING_ADMIN_EMAIL",
				"E2E_ADMIN_EMAIL",
				"STAGING_ADMIN_PASSWORD",
				"E2E_ADMIN_PASSWORD",
				"E2E_OWNER_EMAIL",
				"TEST_OWNER_EMAIL",
				"E2E_OWNER_PASSWORD",
				"TEST_OWNER_PASSWORD",
				"E2E_TENANT_EMAIL",
				"TEST_TENANT_EMAIL",
				"E2E_TENANT_PASSWORD",
				"TEST_TENANT_PASSWORD",
				"PROD_TENANT_EMAIL",
				"PROD_TENANT_PASSWORD",
				"TEST_ADMIN_EMAIL",
				"TEST_ADMIN_PASSWORD",
				"SHARD",
				"TOTAL_SHARDS",
				"CURRENT_SHARD"
			],
			"cache": true,
			"persistent": false
		},
		"@repo/config#lint": {
			"dependsOn": [],
			"inputs": ["src/**/*.{ts,tsx,js,jsx}", "eslint.config.*", "package.json"],
			"outputs": [],
			"env": [
				"NEXT_PUBLIC_SUPABASE_URL",
				"NEXT_PUBLIC_SUPABASE_ANON_KEY",
				"SUPABASE_ANON_KEY",
				"ANON_KEY",
				"NEXT_PUBLIC_API_BASE_URL"
			],
			"cache": true,
			"persistent": false
		},
		"@repo/typescript-config#typecheck": {
			"dependsOn": [],
			"inputs": ["*.json", "package.json"],
			"outputs": [],
			"cache": true,
			"persistent": false
		},
		"clean": {
			"cache": false,
			"outputs": [],
			"persistent": false
		},
		"generate:schemas": {
			"dependsOn": ["@repo/backend#build"],
			"inputs": ["scripts/generate-frontend-schemas.ts", "package.json"],
			"outputs": ["src/lib/validation/generated-*.ts"],
			"cache": true,
			"persistent": false
		}
	}
}
