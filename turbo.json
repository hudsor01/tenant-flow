{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "remoteCache": {
    "enabled": true
  },
  "globalEnv": [
    "NODE_ENV",
    "CI"
  ],
  "globalDependencies": [
    "**/.env.*"
  ],
  "envMode": "loose",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!**/*.md",
        "!**/*.test.*",
        "!**/*.spec.*",
        "!**/*.stories.*",
        "!**/test-results/**",
        "!**/playwright-report/**"
      ],
      "outputs": [
        "dist/**",
        "build/**",
        ".turbo/**"
      ]
    },
    "@tenantflow/frontend#build": {
      "dependsOn": ["@tenantflow/shared#build", "@tenantflow/tailwind-config#build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!**/*.md",
        "!**/*.test.*",
        "!**/*.spec.*",
        "!**/*.stories.*"
      ],
      "outputs": [
        "dist/**",
        ".turbo/**"
      ],
      "env": [
        "NODE_ENV",
        "VITE_*"
      ]
    },
    "@tenantflow/backend#build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!**/*.md",
        "!**/*.test.*",
        "!**/*.spec.*",
        "!**/*.stories.*"
      ],
      "outputs": [
        "dist/**",
        ".turbo/**"
      ],
      "env": [
        "NODE_ENV"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "generate": {
      "cache": true,
      "inputs": [
        "prisma/schema.prisma"
      ],
      "outputs": [
        "node_modules/.prisma/**",
        "node_modules/@prisma/**"
      ]
    },
    "lint": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".eslintrc*",
        "eslint.config.*"
      ],
      "outputs": [],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "tsconfig*.json"
      ],
      "outputs": [],
      "cache": true
    },
    "test": {
      "cache": false,
      "outputs": ["coverage/**"]
    },
    "test:unit": {
      "cache": false,
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "format": {
      "cache": false
    },
    "@tenantflow/shared#build": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "!**/*.md",
        "!**/*.test.*",
        "!**/*.spec.*"
      ],
      "outputs": [
        "dist/**"
      ]
    }
  }
}
