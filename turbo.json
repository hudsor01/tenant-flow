{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "remoteCache": {
    "enabled": false,
    "signature": true,
    "timeout": 60
  },
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "VERCEL_ENV"
  ],
  "globalDependencies": [
    "**/.env.*",
    ".prettierrc",
    "eslint.config.js",
    "package-lock.json",
    "vercel.json"
  ],
  "envMode": "loose",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!**/*.md",
        "!**/*.test.*",
        "!**/*.spec.*",
        "!**/*.stories.*",
        "!**/test-results/**",
        "!**/playwright-report/**",
        "!**/coverage/**",
        "!**/.git/**"
      ],
      "outputs": [
        "dist/**",
        "build/**",
        ".turbo/**"
      ],
      "cache": true,
      "env": ["NODE_ENV"]
    },
    "@repo/database#build": {
      "dependsOn": ["@repo/database#generate"],
      "inputs": [
        "src/**",
        "tsconfig*.json",
        "package.json",
        "!**/*.md",
        "!**/*.test.*",
        "!**/*.spec.*"
      ],
      "outputs": [
        "dist/**",
        ".turbo/**"
      ],
      "cache": true
    },
    "@repo/database#generate": {
      "dependsOn": [],
      "inputs": [
        "prisma/schema.prisma",
        "package.json"
      ],
      "outputs": [
        "src/generated/**"
      ],
      "cache": true
    },
    "@repo/shared#build": {
      "dependsOn": [],
      "inputs": [
        "src/**",
        "tsconfig*.json",
        "package.json",
        "!**/*.md",
        "!**/*.test.*",
        "!**/*.spec.*"
      ],
      "outputs": [
        "dist/**",
        ".turbo/**"
      ],
      "cache": true
    },
    "@repo/frontend#build": {
      "dependsOn": ["@repo/shared#build", "@repo/database#generate"],
      "inputs": [
        "src/**",
        "app/**",
        "components/**",
        "lib/**",
        "public/**",
        "next.config.mjs",
        "tsconfig*.json",
        "package.json",
        "!**/*.md",
        "!**/*.test.*",
        "!**/*.spec.*",
        "!**/*.stories.*",
        "!**/test-results/**",
        "!**/playwright-report/**"
      ],
      "outputs": [
        ".next/**",
        ".turbo/**"
      ],
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_*"
      ],
      "cache": true
    },
    "@repo/backend#build": {
      "dependsOn": ["@repo/shared#build"],
      "inputs": [
        "src/**",
        "tsconfig*.json",
        "package.json",
        "nest-cli.json",
        "!**/*.md",
        "!**/*.test.*",
        "!**/*.spec.*"
      ],
      "outputs": [
        "dist/**",
        ".turbo/**"
      ],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["@repo/database#generate"]
    },
    "lint": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "eslint.config.*",
        ".eslintrc*"
      ],
      "outputs": [],
      "cache": true
    },
    "lint:fix": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "eslint.config.*",
        ".eslintrc*"
      ],
      "outputs": [],
      "cache": false
    },
    "format": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".prettierrc*",
        "prettier.config.*"
      ],
      "outputs": [],
      "cache": false
    },
    "format:check": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".prettierrc*",
        "prettier.config.*"
      ],
      "outputs": [],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["@repo/database#generate"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "tsconfig*.json"
      ],
      "outputs": [],
      "cache": true
    },
    "@repo/frontend#typecheck": {
      "dependsOn": ["@repo/shared#build"],
      "inputs": [
        "src/**",
        "tsconfig*.json",
        "!**/*.md",
        "!**/*.test.*",
        "!**/*.spec.*"
      ],
      "outputs": [],
      "cache": true
    },
    "@repo/backend#typecheck": {
      "dependsOn": ["@repo/shared#build"],
      "inputs": [
        "src/**",
        "tsconfig*.json",
        "package.json",
        "!**/*.md",
        "!**/*.test.*",
        "!**/*.spec.*"
      ],
      "outputs": [],
      "cache": true
    },
    "@repo/shared#typecheck": {
      "dependsOn": [],
      "inputs": [
        "src/**",
        "tsconfig*.json",
        "package.json",
        "!**/*.md",
        "!**/*.test.*",
        "!**/*.spec.*"
      ],
      "outputs": [],
      "cache": true
    },
    "test": {
      "dependsOn": ["@repo/database#generate"],
      "cache": false,
      "outputs": ["coverage/**"]
    },
    "test:unit": {
      "dependsOn": ["@repo/database#generate"],
      "cache": false,
      "outputs": ["coverage/**"]
    },
    "test:coverage": {
      "dependsOn": ["@repo/database#generate"],
      "cache": false,
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "dependsOn": ["@repo/database#generate"],
      "cache": false
    },
    "clean": {
      "cache": false,
      "outputs": []
    }
  }
}
