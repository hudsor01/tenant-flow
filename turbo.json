{
	"$schema": "https://turborepo.dev/schema.json",
	"ui": "tui",
	"globalDependencies": ["tsconfig.json", "**/.env.*"],
	"globalEnv": [
		"CI",
		"NODE_ENV",
		"DATABASE_URL",
		"JWT_SECRET",
		"NEXT_PUBLIC_*",
		"SENTRY_*",
		"SKIP_ENV_VALIDATION",
		"STRIPE_*",
		"SUPABASE_*",
		"VERCEL"
	],
	"globalPassThroughEnv": ["VERCEL_*", "GITHUB_*", "PLAYWRIGHT_*"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"]
		},
		"test": {
			"dependsOn": ["build"],
			"outputs": ["coverage/**"]
		},
		"test:unit": {
			"outputs": ["coverage/**"]
		},
		"test:integration": {
			"outputs": ["coverage/**"]
		},
		"lint": {
			"outputs": []
		},
		"typecheck": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"interactive": true
		},
		"clean": {
			"cache": false
		}
	},
	"remoteCache": {
		"enabled": true,
		"signature": true,
		"timeout": 30
	}
}
