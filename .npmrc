# Platform compatibility settings
save-exact=true
engine-strict=false

# Include optional dependencies (required for turbo platform-specific binaries)
# Note: 'include=optional' is deprecated, npm includes optional deps by default
fetch-retries=5
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Performance optimizations
prefer-offline=true
progress=false
loglevel=warn

# Security settings
audit-level=moderate
fund=false

# Platform-specific optional dependencies handling
# Let npm handle platform-specific binaries automatically
# Force installation of all platform-specific optionalDependencies for cross-platform compatibility

# CI/CD compatibility settings for cross-platform builds
# engine-strict=false already set above

# Cross-platform SWC compatibility - prevent platform-specific lockfile issues
# Let Next.js handle SWC binary selection automatically per platform

# pnpm workspace settings
link-workspace-packages=true
prefer-workspace-packages=true