. "$(dirname -- "$0")/init.sh"

# Husky v9.1.7 optimized pre-push hook
# Lightweight validation since checks already ran at commit

echo "ğŸš€ Running lightweight pre-push validation..."

# Ensure lockfile is in sync
echo "ğŸ“¦ Verifying pnpm lockfile is up to date..."
pnpm install --lockfile-only --ignore-scripts

if git diff --quiet pnpm-lock.yaml; then
  echo "âœ… Lockfile is in sync"
else
  echo "âŒ pnpm-lock.yaml is out of sync! Please run 'pnpm install' and commit the changes."
  exit 1
fi

# Only verify that commits are properly formatted and branch is ready
# Heavy validation already happened at commit time
echo "âœ… Pre-push validation passed! Pushing to remote..."