{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "TenantFlow Root Config",
  // ROOT COORDINATION: This config coordinates the monorepo project references
  // Individual packages use different module resolution strategies intentionally:
  // - Frontend: Bundler resolution for Vite compatibility  
  // - Backend: Node resolution for NestJS/CommonJS compatibility
  // - Database: Node resolution for Node.js backend consumption
  // - Shared: Bundler resolution with ESNext for dual compatibility
  // See MODULE_RESOLUTION_STRATEGY.md for detailed explanation
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "customConditions": ["@tenantflow/source"],
    "paths": {
      "@repo/database": ["./packages/database/src"],
      "@repo/database/*": ["./packages/database/src/*"],
      "@repo/shared": ["./packages/shared/src"],
      "@repo/shared/*": ["./packages/shared/src/*"],
      "@repo/typescript-config/*": ["./packages/typescript-config/*"],
      "@repo/tailwind-config/*": ["./packages/tailwind-config/*"]
    }
  },
  "files": [],
  "references": [
    { "path": "./packages/database/tsconfig.build.json" },
    { "path": "./packages/shared/tsconfig.build.json" },
    { "path": "./apps/frontend/tsconfig.build.json" },
    { "path": "./apps/backend/tsconfig.build.json" }
  ]
}