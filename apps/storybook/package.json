{
	"name": "@repo/storybook",
	"version": "0.1.0",
	"private": true,
	"description": "Storybook for TenantFlow design system and component library",
	"scripts": {
		"dev": "storybook dev -p 6006",
		"build": "storybook build",
		"start": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"test-storybook": "test-storybook",
		"test-storybook:ci": "test-storybook --ci --coverage",
		"test-storybook:watch": "test-storybook --watch",
		"chromatic": "chromatic --exit-zero-on-changes",
		"chromatic:ci": "chromatic --ci --exit-zero-on-changes",
		"visual-test": "npm run build-storybook && npm run chromatic",
		"test:a11y": "test-storybook --coverage --browsers chromium",
		"test:perf": "npm run build-storybook && npx webpack-bundle-analyzer storybook-static/static/js/*.js",
		"setup:chromatic": "echo 'To setup Chromatic: 1. Visit https://chromatic.com 2. Create project 3. Set CHROMATIC_PROJECT_TOKEN env var'"
	},
	"dependencies": {
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^3.2.6",
		"@storybook/addon-a11y": "^8.5.2",
		"@storybook/addon-essentials": "^8.5.2",
		"@storybook/addon-interactions": "^8.5.2",
		"@storybook/addon-links": "^8.5.2",
		"@storybook/addon-measure": "^8.5.2",
		"@storybook/addon-outline": "^8.5.2",
		"@storybook/addon-themes": "^8.5.2",
		"@storybook/addon-viewport": "^8.5.2",
		"@storybook/blocks": "^8.5.2",
		"@storybook/nextjs": "^8.5.2",
		"@storybook/react": "^8.5.2",
		"@storybook/test": "8.6.14",
		"@storybook/test-runner": "^0.19.1",
		"axe-playwright": "^2.0.1",
		"chromatic": "13.1.3",
		"msw": "2.10.5",
		"msw-storybook-addon": "2.0.5",
		"playwright": "^1.48.2",
		"storybook": "^8.5.2",
		"typescript": "^5.3.3",
		"webpack-bundle-analyzer": "^4.10.2"
	},
	"msw": {
		"workerDirectory": [
			"public"
		]
	}
}
