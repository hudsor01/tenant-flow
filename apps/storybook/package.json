{
  "name": "@repo/storybook",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "storybook": "NODE_NO_WARNINGS=1 STORYBOOK_PACKAGE_MANAGER=npm storybook dev -p 6005 --no-open --disable-telemetry",
    "storybook:debug": "STORYBOOK_PACKAGE_MANAGER=npm storybook dev -p 6006 --no-open --debug --loglevel verbose",
    "storybook:ci": "STORYBOOK_PACKAGE_MANAGER=npm storybook dev -p 6006 --ci --disable-telemetry --smoke-test",
    "storybook:quiet": "STORYBOOK_PACKAGE_MANAGER=npm storybook dev -p 6006 --no-open --quiet --disable-telemetry",
    "build-storybook": "storybook build",
    "build-storybook:stats": "storybook build --stats-json",
    "build-storybook:test": "storybook build --test",
    "test-visual": "playwright test --config=playwright-visual.config.ts",
    "test-visual:update": "playwright test --config=playwright-visual.config.ts --update-snapshots",
    "test-visual:debug": "playwright test --config=playwright-visual.config.ts --debug",
    "test-visual:ui": "playwright test --config=playwright-visual.config.ts --ui",
    "chromatic": "chromatic --project-token=$CHROMATIC_PROJECT_TOKEN",
    "chromatic:ci": "chromatic --project-token=$CHROMATIC_PROJECT_TOKEN --exit-zero-on-changes",
    "test-visual:chromatic": "playwright test --config=playwright-chromatic.config.ts",
    "archive-storybook": "CHROMATIC_ARCHIVE_LOCATION=../.. playwright test --config=playwright-chromatic.config.ts && chromatic --playwright"
  },
  "devDependencies": {
    "@chromatic-com/playwright": "^0.12.7",
    "@storybook/addon-console": "^3.0.0",
    "@storybook/addon-coverage": "^2.0.0",
    "@storybook/addon-links": "^9.1.4",
    "@storybook/addon-onboarding": "^9.1.4",
    "@storybook/addon-themes": "^9.1.4",
    "@storybook/nextjs": "^9.1.4",
    "@storybook/nextjs-vite": "9.1.4",
    "assert": "2.1.0",
    "autoprefixer": "10.4.21",
    "buffer": "6.0.3",
    "chromatic": "^13.1.4",
    "crypto-browserify": "3.12.1",
    "eslint-plugin-storybook": "9.1.4",
    "events": "3.3.0",
    "msw": "2.11.1",
    "msw-storybook-addon": "2.0.5",
    "postcss": "8.5.6",
    "querystring-es3": "0.2.1",
    "storybook": "^9.1.4",
    "storybook-addon-grid-overlay": "1.0.1",
    "stream-browserify": "3.0.0",
    "tailwindcss": "4.1.13",
    "url": "0.11.4",
    "util": "0.12.5"
  },
  "dependencies": {
    "@repo/shared": "*",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-refresh": "0.17.0"
  },
  "msw": {
    "workerDirectory": [
      "public",
      "apps/storybook/public"
    ]
  }
}
