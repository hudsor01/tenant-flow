{
	"name": "@repo/storybook",
	"version": "0.1.0",
	"private": true,
	"description": "Storybook for TenantFlow design system and component library",
	"scripts": {
		"dev": "storybook dev -p 6006",
		"build": "storybook build",
		"start": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"test-storybook": "test-storybook",
		"test-storybook:ci": "test-storybook --ci --coverage",
		"test-storybook:watch": "test-storybook --watch",
		"chromatic": "chromatic --exit-zero-on-changes",
		"chromatic:ci": "chromatic --ci --exit-zero-on-changes",
		"visual-test": "npm run build-storybook && npm run chromatic",
		"test:a11y": "test-storybook --coverage --browsers chromium",
		"test:perf": "npm run build-storybook && npx webpack-bundle-analyzer storybook-static/static/js/*.js",
		"setup:chromatic": "echo 'To setup Chromatic: 1. Visit https://chromatic.com 2. Create project 3. Set CHROMATIC_PROJECT_TOKEN env var'"
	},
	"dependencies": {
		"@mdx-js/react": "3.1.0",
		"@storybook/icons": "1.4.0",
		"filesize": "10.1.6",
		"react": "^19.1.1",
		"react-dom": "^19.1.1"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^4.1.0",
		"@emotion/is-prop-valid": "1.3.1",
		"@neoconfetti/react": "1.0.0",
		"@storybook/addon-a11y": "^9.1.2",
		"@storybook/addon-docs": "^9.1.2",
		"@storybook/addon-links": "^9.1.2",
		"@storybook/addon-themes": "^9.1.2",
		"@storybook/nextjs-vite": "9.1.2",
		"@storybook/test-runner": "^0.23.0",
		"@tailwindcss/postcss": "4.1.12",
		"autoprefixer": "10.4.21",
		"axe-playwright": "^2.1.0",
		"chromatic": "13.1.3",
		"eslint-plugin-storybook": "9.1.2",
		"jsonfile": "6.2.0",
		"msw": "2.10.5",
		"msw-storybook-addon": "2.0.5",
		"playwright": "1.54.2",
		"postcss": "8.5.6",
		"storybook": "^9.1.2",
		"tailwindcss": "4.1.12",
		"tailwindcss-animate": "1.0.7",
		"typescript": "^5.3.3",
		"webpack-bundle-analyzer": "^4.10.2"
	},
	"msw": {
		"workerDirectory": [
			"public"
		]
	}
}
