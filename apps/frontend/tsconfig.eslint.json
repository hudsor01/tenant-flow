{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "TenantFlow Frontend - ESLint TypeScript Configuration (Modernized 2025)",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types/**/*.d.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "playwright.config.ts"
  ],
  "exclude": ["node_modules", ".next", "out", "dist", "build", "coverage/**/*"]
}
