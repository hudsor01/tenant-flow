{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "TenantFlow Frontend - Next.js 16 + React 19.2",
	"extends": "../../packages/typescript-config/next.json",
	"compilerOptions": {
		"baseUrl": ".",
		"verbatimModuleSyntax": false,
		"paths": {
			"#app/*": ["./src/app/*"],
			"#components/*": ["./src/components/*"],
			"#contexts/*": ["./src/contexts/*"],
			"#design-system/*": ["./src/design-system/*"],
			"#lib/*": ["./src/lib/*"],
			"#hooks/*": ["./src/hooks/*"],
			"#stores/*": ["./src/stores/*"],
			"#types/*": ["./src/types/*"],
			"#providers/*": ["./src/providers/*"],
			"#test/*": ["./src/test/*"],
			"#config/*": ["./src/config/*"]
		},
		"plugins": [{ "name": "next" }],
		"types": ["next/types/global", "node", "vitest/globals"]
	},
	"include": [
		"next-env.d.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.d.ts",
		".next/types/**/*.ts",
		"playwright.config.ts",
		"next.config.ts"
	],
	"exclude": [
		"node_modules",
		".next",
		"out",
		"dist",
		"coverage",
		"playwright-report"
	]
}
