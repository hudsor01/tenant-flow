{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "TenantFlow Frontend TypeScript Config",
	"extends": "@repo/typescript-config/react.json",
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ES2017",
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"]
		},
		"jsx": "preserve"
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"src/types/**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		".next",
		"out",
		"dist",
		"build",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.spec.ts",
		"**/*.spec.tsx",
		"tests/**/*",
		"**/__tests__/**/*",
		"**/__tests__.disabled/**/*",
		"src/test/**/*",
		"scripts/**/*"
	],
	"references": [
		{
			"path": "../../packages/shared"
		}
	]
}
