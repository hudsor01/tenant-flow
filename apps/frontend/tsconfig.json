{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../packages/typescript-config/next.json",
	"compilerOptions": {
		"baseUrl": ".",
		"verbatimModuleSyntax": false,
		"paths": {
			"#app/*": ["./src/app/*"],
			"#components/*": ["./src/components/*"],
			"#contexts/*": ["./src/contexts/*"],
			"#lib/*": ["./src/lib/*"],
			"#hooks/*": ["./src/hooks/*"],
			"#stores/*": ["./src/stores/*"],
			"#types/*": ["./src/types/*"],
			"#providers/*": ["./src/providers/*"],
			"#test/*": ["./src/test/*"],
			"#config/*": ["./src/config/*"],
			"#utils/*": ["./src/utils/*"]
		},
		"plugins": [{ "name": "next" }],
		"types": ["next/types/global", "node", "vitest/globals"],
		"composite": false,
		"declaration": false,
		"incremental": true
	},
	"include": [
		"next-env.d.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.d.ts",
		".next/types/**/*.ts",
		".next/dev/types/**/*.ts",
		"playwright.config.ts",
		"next.config.ts",
		"src/proxy.ts",
		"../../packages/shared/src/types/marketing.d.ts",
		"../../packages/shared/src/types/next.d.ts",
		"../../packages/shared/src/types/stripe.d.ts"
	],
	"exclude": [
		"node_modules",
		".next",
		"out",
		"dist",
		"coverage",
		"playwright-report",
		"src/test/**/*",
		"tests/**/*"
	]
}
