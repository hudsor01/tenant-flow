{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "TenantFlow Frontend TypeScript Config",
  // REACT + VITE BUNDLER: Uses bundler resolution for modern frontend
  // This enables Vite's advanced import resolution, HMR, and code splitting
  "extends": "@repo/typescript-config/react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "preserveSymlinks": true,
    "customConditions": ["@tenantflow/source"],
    "paths": {
      "@/*": ["./src/*"],
      "@repo/database": ["../../packages/database/src"],
      "@repo/database/*": ["../../packages/database/src/*"],
      "@repo/shared": ["../../packages/shared/src"],
      "@repo/shared/*": ["../../packages/shared/src/*"],
      "@repo/shared/types/*": ["../../packages/shared/src/types/*"]
    },
    "types": ["vite/client", "@types/node"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
