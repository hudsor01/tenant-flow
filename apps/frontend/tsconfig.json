{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "TenantFlow Frontend - Next.js 15 + React 19 (Modernized 2025)",
	"extends": "../../packages/typescript-config/next.json",
	"compilerOptions": {
		"baseUrl": ".",
		"jsx": "preserve",
		"paths": {
			"#app/*": ["./src/app/*"],
			"#components/*": ["./src/components/*"],
			"#contexts/*": ["./src/contexts/*"],
			"#design-system/*": ["./src/design-system/*"],
			"#lib/*": ["./src/lib/*"],
			"#hooks/*": ["./src/hooks/*"],
			"#stores/*": ["./src/stores/*"],
			"#types/*": ["./src/types/*"],
			"#providers/*": ["./src/providers/*"],
			"#test/*": ["./src/test/*"]
		},
		"composite": false,
		"incremental": true,
		"noEmit": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"types": ["node", "react", "react-dom"]
	},
	"include": [
		"next-env.d.ts",
		"src/**/*",
		".next/types/**/*.ts",
		"src/types/**/*.d.ts",
		"src/types/jest-dom.d.ts",
		"node_modules/@types/react/jsx-runtime.d.ts",
		"playwright.config.ts"
	],
	"exclude": [
		"node_modules",
		".next",
		"out",
		"dist",
		"build",
		".tsc-output",
		"coverage/**/*",
		"coverage/**/*",
		"*.config.js",
		"*.config.mjs",
		"jest.config.js",
		"vitest.config.production.ts"
	]
}
