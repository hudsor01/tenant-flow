{
  "extends": [
    "next/core-web-vitals"
  ],
  "root": true,
  "rules": {
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "no-console": "warn"
  },
  "ignorePatterns": [
    ".next/**",
    "node_modules/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "**/test/**",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}