# ===============================
# NEXT.JS 15 ENVIRONMENT VARIABLES
# ===============================
# Copy this file to .env.local for local development
# All variables with NEXT_PUBLIC_ prefix are exposed to the browser

# ===============================
# APPLICATION CONFIG [REQUIRED]
# ===============================
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=https://tenantflow.app
NEXT_PUBLIC_API_URL=https://api.tenantflow.app/api/v1

# ===============================
# SUPABASE [REQUIRED]
# ===============================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# ===============================
# STRIPE [REQUIRED]
# ===============================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Stripe Price IDs - 4-Tier Structure
NEXT_PUBLIC_STRIPE_STARTER_MONTHLY=price_1Rbnyk00PMlKUSP0oGJV2i1G
NEXT_PUBLIC_STRIPE_STARTER_ANNUAL=price_1Rbnyk00PMlKUSP0uS33sCq3
NEXT_PUBLIC_STRIPE_GROWTH_MONTHLY=price_1Rbnzv00PMlKUSP0fq5R5MNV
NEXT_PUBLIC_STRIPE_GROWTH_ANNUAL=price_1Rbnzv00PMlKUSP0jIq3BxTy
NEXT_PUBLIC_STRIPE_TENANTFLOW_MAX_MONTHLY=price_1Rbo0P00PMlKUSP0Isi7U1Wr
NEXT_PUBLIC_STRIPE_TENANTFLOW_MAX_ANNUAL=price_1Rbo0r00PMlKUSP0rzUhwgkO

# Optional Feature Pricing
NEXT_PUBLIC_STRIPE_LEASE_GENERATOR_PRICE_ID=price_lease_generator_24h

# ===============================
# ANALYTICS [OPTIONAL]
# ===============================
NEXT_PUBLIC_POSTHOG_KEY=phc_your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=123456789

# ===============================
# FEATURE FLAGS [OPTIONAL]
# ===============================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# ===============================
# BUILD TIME ONLY (NOT PUBLIC)
# ===============================
# These are used during build but not exposed to browser
ANALYZE=false
NEXT_TELEMETRY_DISABLED=1

# ===============================
# VERCEL DEPLOYMENT CHECKLIST
# ===============================
# 
# Go to: https://vercel.com/[your-team]/tenant-flow/settings/environment-variables
# 
# Add these REQUIRED variables:
# ✅ NEXT_PUBLIC_SUPABASE_URL
# ✅ NEXT_PUBLIC_SUPABASE_ANON_KEY  
# ✅ NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY
# ✅ NEXT_PUBLIC_STRIPE_STARTER_MONTHLY
# ✅ NEXT_PUBLIC_STRIPE_STARTER_ANNUAL
# ✅ NEXT_PUBLIC_STRIPE_GROWTH_MONTHLY
# ✅ NEXT_PUBLIC_STRIPE_GROWTH_ANNUAL
# ✅ NEXT_PUBLIC_STRIPE_TENANTFLOW_MAX_MONTHLY
# ✅ NEXT_PUBLIC_STRIPE_TENANTFLOW_MAX_ANNUAL
# 
# Optional but recommended:
# ⭕ NEXT_PUBLIC_POSTHOG_KEY
# ⭕ NEXT_PUBLIC_GTM_ID
# ⭕ NEXT_PUBLIC_ENABLE_ANALYTICS=true
# ⭕ NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
#
# ===============================
# MIGRATION FROM VITE
# ===============================
# If migrating from Vite, rename these in Vercel:
# NEXT_PUBLIC_SUPABASE_URL → NEXT_PUBLIC_SUPABASE_URL
# NEXT_PUBLIC_SUPABASE_ANON_KEY → NEXT_PUBLIC_SUPABASE_ANON_KEY
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY → NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY
# NEXT_PUBLIC_STRIPE_* → NEXT_PUBLIC_STRIPE_*
# NEXT_PUBLIC_POSTHOG_KEY → NEXT_PUBLIC_POSTHOG_KEY
# NEXT_PUBLIC_GTM_ID → NEXT_PUBLIC_GTM_ID
# etc.

# ===============================
# SECURITY NOTES
# ===============================
# 1. NEXT_PUBLIC_* variables are exposed to the browser
# 2. Never put secrets, private keys, or database URLs in NEXT_PUBLIC_*
# 3. Server-only secrets go in variables without NEXT_PUBLIC_ prefix
# 4. Use different keys for development and production