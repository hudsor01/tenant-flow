{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "TenantFlow Backend TypeScript Config",
  // NESTJS + NODE.JS: Uses node resolution for CommonJS/NestJS compatibility
  // Required for decorator metadata, dependency injection, and direct execution
  "extends": "@repo/typescript-config/nestjs.json", 
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "tsBuildInfoFile": "./.tsbuildinfo",
    "paths": {
      "@/*": ["src/*"],
      "@auth/*": ["src/auth/*"],
      "@common/*": ["src/common/*"],
      "@config/*": ["src/config/*"],
      "@database/*": ["src/database/*"],
      "@invoices/*": ["src/invoices/*"],
      "@leases/*": ["src/leases/*"],
      "@maintenance/*": ["src/maintenance/*"],
      "@notifications/*": ["src/notifications/*"],
      "@payments/*": ["src/payments/*"],
      "@properties/*": ["src/properties/*"],
      "@stripe/*": ["src/stripe/*"],
      "@subscriptions/*": ["src/subscriptions/*"],
      "@tenants/*": ["src/tenants/*"],
      "@users/*": ["src/users/*"],
      "@types": ["src/types/index"],
      "@utils/*": ["src/utils/*"],
      "@repo/shared": ["../../packages/shared/src"],
      "@repo/shared/*": ["../../packages/shared/src/*"],
      "@repo/database": ["../../packages/database/src"],
      "@repo/database/*": ["../../packages/database/src/*"]
    },
    "types": ["node", "reflect-metadata", "vitest/globals"]
  },
  "include": [
    "src",
    "src/types/fastify.d.ts",
    "test/setup.ts"
  ],
  "exclude": [
    "src/auth/auth-production-diagnostic.ts",
    "src/common/services/base-crud.service.example.ts",
    "src/common/services/base-crud.service.test.template.ts",
    "supabase/functions/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.template.ts"
  ]
}
