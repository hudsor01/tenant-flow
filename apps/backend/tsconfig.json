{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "TenantFlow Backend - Single Config (2025)",
	"extends": "../../packages/typescript-config/nestjs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "./dist",
		"tsBuildInfoFile": "./.tsbuildinfo",
		"types": ["node", "jest", "express"],
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"incremental": true,
		"removeComments": true,
		"skipLibCheck": true,
		"verbatimModuleSyntax": false
	},
	"include": ["src/**/*", "scripts/**/*.ts", "test/**/*.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"src/auth/auth-production-diagnostic.ts",
		"test/email/**/*"
	]
}
