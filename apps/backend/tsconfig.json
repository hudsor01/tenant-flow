{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "TenantFlow Backend TypeScript Config",
	"extends": "@repo/typescript-config/nestjs.json",
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist",
		"tsBuildInfoFile": "./.tsbuildinfo",
		"jsx": "react",
		"jsxFactory": "React.createElement",
		"jsxFragmentFactory": "React.Fragment",
		"paths": {
			"@repo/shared": ["../../packages/shared/src"],
			"@repo/shared/*": ["../../packages/shared/src/*"],
			"@repo/database": ["../../packages/database/src"],
			"@repo/database/*": ["../../packages/database/src/*"],
			"@repo/emails": ["../../packages/emails"],
			"@repo/emails/*": ["../../packages/emails/*"]
		},
		"types": ["node", "reflect-metadata", "vitest/globals"]
	},
	"include": ["src", "src/types/fastify.d.ts", "test/setup.ts"],
	"exclude": [
		"src/auth/auth-production-diagnostic.ts",
		"src/common/services/base-crud.service.example.ts",
		"src/common/services/base-crud.service.test.template.ts",
		"supabase/functions/**/*",
		"test/email/**/*",
		"**/*.test.ts",
		"**/*.spec.ts",
		"**/*.template.ts"
	]
}
