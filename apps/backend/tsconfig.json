{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "TenantFlow Backend TypeScript Config (Modernized 2025)",
	"extends": "../../packages/typescript-config/nestjs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "./dist",
		"tsBuildInfoFile": "./.tsbuildinfo",
		"types": ["node", "jest"],
		"skipLibCheck": true,
		"isolatedModules": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"incremental": true,
		"noEmit": false,
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": ["src", "scripts", "test/setup.ts"],
	"exclude": [
		"src/auth/auth-production-diagnostic.ts",
		"src/services/base-crud.service.example.ts",
		"src/services/base-crud.service.test.template.ts",
		"supabase/functions/**/*",
		"test/email/**/*",
		"node_modules/zod/v4/locales/**/*",
		"dist/**/*",
		"src/emails/**/*.js",
		"**/*.test.*",
		"**/*.spec.*",
		"**/*.e2e-spec.*"
	],
	"references": [
		{ "path": "../../packages/shared" },
		{ "path": "../../packages/database" }
	]
}
