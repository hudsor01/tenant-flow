{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "TenantFlow Backend - Single Config",
	"extends": "../../packages/typescript-config/nestjs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": "./src",
		"outDir": "./dist",
		"tsBuildInfoFile": "./.tsbuildinfo",
		"types": ["node", "jest", "express"],
		"composite": false,
		"declaration": false,
		"declarationMap": false,
		"incremental": false,
		"removeComments": true
	},
	"include": ["src/**/*.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"test",
		"tests",
		"**/*.spec.ts",
		"**/*.test.ts",
		"src/auth/auth-production-diagnostic.ts",
		"test/email/**/*"
	]
}
