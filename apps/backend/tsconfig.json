{
  "extends": "@tenantflow/typescript-config/nestjs.json",
  "compilerOptions": {
    "baseUrl": "../../",
    "noEmit": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    
    "types": ["node", "superjson"],
    "paths": {
      "@/*": ["apps/backend/src/*"],
      "@auth/*": ["apps/backend/src/auth/*"],
      "@common/*": ["apps/backend/src/common/*"],
      "@config/*": ["apps/backend/src/config/*"],
      "@database/*": ["apps/backend/src/database/*"],
      "@invoices/*": ["apps/backend/src/invoices/*"],
      "@leases/*": ["apps/backend/src/leases/*"],
      "@maintenance/*": ["apps/backend/src/maintenance/*"],
      "@notifications/*": ["apps/backend/src/notifications/*"],
      "@payments/*": ["apps/backend/src/payments/*"],
      "@properties/*": ["apps/backend/src/properties/*"],
      "@stripe/*": ["apps/backend/src/stripe/*"],
      "@subscriptions/*": ["apps/backend/src/subscriptions/*"],
      "@tenants/*": ["apps/backend/src/tenants/*"],
      "@trpc/*": ["apps/backend/src/trpc/*"],
      "@users/*": ["apps/backend/src/users/*"],
      "@types": ["apps/backend/src/types/index"],
      "@utils/*": ["apps/backend/src/utils/*"],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/types/fastify.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.e2e-spec.ts",
    "**/test/**/*",
    "**/tests/**/*",
    "node_modules/**/v4/**",
    "node_modules/**/v4-mini/**",
    "node_modules/**/*.d.cts"
  ]
}
