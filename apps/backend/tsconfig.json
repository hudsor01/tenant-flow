{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "TenantFlow Backend TypeScript Config - Pure Project References",
	"extends": "../../packages/typescript-config/nestjs.json",
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist",
		"tsBuildInfoFile": "./.tsbuildinfo",
		"types": ["node", "jest"],
		"skipLibCheck": true,
		"isolatedModules": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"incremental": true,
		"noEmit": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false
	},
	"include": ["src", "scripts", "test"],
	"exclude": [
		"src/auth/auth-production-diagnostic.ts",
		"src/services/base-crud.service.example.ts",
		"src/services/base-crud.service.test.template.ts",
		"supabase/functions/**/*",
		"test/email/**/*",
		"**/*.template.ts"
	],
	"references": [
		{ "path": "../../packages/shared" },
		{ "path": "../../packages/database" }
	]
}
