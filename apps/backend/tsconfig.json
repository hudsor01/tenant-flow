{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "TenantFlow Backend TypeScript Config",
	"extends": "@repo/typescript-config/nestjs.json",
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist",
		"tsBuildInfoFile": "./.tsbuildinfo",
		"jsx": "react",
		"jsxFactory": "React.createElement",
		"jsxFragmentFactory": "React.Fragment",
		"types": ["node", "reflect-metadata"],
		"skipLibCheck": true,
		"isolatedModules": false,
		"paths": {
			"@repo/shared": ["../../packages/shared/dist/cjs"],
			"@repo/shared/*": ["../../packages/shared/dist/cjs/*"]
		}
	},
	"include": ["src", "src/types/fastify.d.ts", "test/setup.ts"],
	"exclude": [
		"src/auth/auth-production-diagnostic.ts",
		"src/services/base-crud.service.example.ts",
		"src/services/base-crud.service.test.template.ts",
		"supabase/functions/**/*",
		"test/email/**/*",
		"**/*.test.ts",
		"**/*.spec.ts",
		"**/*.template.ts"
	],
	"references": [
		{ "path": "../../packages/shared" },
		{ "path": "../../packages/database" }
	]
}
