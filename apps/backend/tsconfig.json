{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "TenantFlow Backend",
	"extends": "../../packages/typescript-config/nestjs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "./dist",
		"tsBuildInfoFile": "./.tsbuildinfo",
		"types": ["node", "jest", "express"],
		"composite": false,
		"declaration": true,
		"declarationMap": true,
		"incremental": true,
		"removeComments": true,
		"paths": {
			"@repo/shared": ["../../packages/shared/dist/index.d.ts"],
			"@repo/shared/*": ["../../packages/shared/dist/*"],
			"@repo/testing/*": ["../../packages/testing/src/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts", "tests/**/*.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"src/auth/auth-production-diagnostic.ts",
		"test/email/**/*"
	]
}