{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "TenantFlow Backend TypeScript Config - Pure Project References",
  "extends": "../../packages/typescript-config/nestjs.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "tsBuildInfoFile": "./.tsbuildinfo",
    "jsx": "react-jsx",
    "types": [
      "node",
      "jest",
      "react"
    ],
    "skipLibCheck": true,
    "isolatedModules": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "noEmit": false
  },
  "include": [
    "src",
    "src/types/fastify.d.ts",
    "test/setup.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/**/*"
  ],
  "references": [
    {
      "path": "../../packages/shared"
    },
    {
      "path": "../../packages/database"
    }
  ]
}
