{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"composite": false,
		"declaration": false,
		"declarationMap": false,
		"sourceMap": false,
		"inlineSources": false,
		"removeComments": true,
		"noEmitOnError": false,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts", "src/types/fastify.d.ts"],
	"exclude": [
		"**/*.spec.ts",
		"**/*.test.ts",
		"src/test/**/*",
		"src/auth/auth-production-diagnostic.ts",
		"src/test-utils/**/*",
		"src/queues/__tests__/**/*",
		"src/**/__tests__/**/*"
	]
}
