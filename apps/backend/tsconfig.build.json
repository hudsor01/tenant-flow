{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src", 
    "composite": false,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "inlineSources": false,
    "removeComments": true,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "useDefineForClassFields": false,
    "baseUrl": "./",
    "paths": {}
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts", 
    "**/*.test.ts",
    "src/test/**/*",
    "src/**/*.d.ts",
    "src/auth/auth-production-diagnostic.ts",
    "../../apps/frontend/**/*",
    "../../packages/shared/**/*",
    "@tenantflow/shared/**/*"
  ]
}
