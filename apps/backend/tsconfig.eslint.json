{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "TenantFlow Backend - ESLint TypeScript Configuration (October 2025)",
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": true
	},
	"include": [
		"src/**/*.ts",
		"scripts/**/*.ts",
		"test/**/*.ts",
		"**/*.spec.ts",
		"**/*.test.ts",
		"**/*.e2e-spec.ts"
	],
	"exclude": ["node_modules", "dist"]
}
