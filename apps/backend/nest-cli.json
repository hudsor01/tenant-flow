{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"entryFile": "main",
	"compilerOptions": {
		"deleteOutDir": false,
		"webpack": false,
		"builder": "swc",
		"typeCheck": true,
		"tsConfigPath": "tsconfig.build.json",
		"watchAssets": true,
		"assets": [
			{
				"include": "modules/pdf/templates/**/*",
				"watchAssets": true
			},
			{
				"include": "modules/reports/templates/**/*",
				"watchAssets": true
			},
			{
				"include": "emails/**/*",
				"watchAssets": true
			}
		],
		"plugins": []
	}
}
