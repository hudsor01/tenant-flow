{
	"name": "@repo/backend",
	"version": "0.0.2",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"engines": {
		"node": ">=20.0.0",
		"npm": ">=10.0.0"
	},
	"scripts": {
		"build": "NODE_ENV=production NODE_OPTIONS='--max-old-space-size=4096' npx tsc -p tsconfig.build.json",
		"build:docker": "NODE_ENV=production NODE_OPTIONS='--max-old-space-size=4096' npx tsc -p tsconfig.build.json",
		"build:tsc": "NODE_OPTIONS='--max-old-space-size=4096' tsc --build",
		"dev": "NODE_OPTIONS='--max-old-space-size=4096' tsx watch src/main.ts",
		"dev:old": "NODE_OPTIONS='--max-old-space-size=4096' tsx watch src/main.ts",
		"dev:debug": "NODE_OPTIONS='--enable-source-maps --max-old-space-size=4096' tsx watch --inspect src/main.ts",
		"start": "node dist/apps/backend/src/main.js",
		"start:prod": "node dist/apps/backend/src/main.js",
		"start:prod:migrate": "npm run migrate:deploy && node dist/apps/backend/src/main.js",
		"lint": "eslint . --fix --no-warn-ignored",
		"format": "prettier --write \"src/**/*.ts\"",
		"typecheck": "NODE_OPTIONS='--max-old-space-size=8192' tsc -p tsconfig.build.json --noEmit --incremental --skipLibCheck",
		"test": "jest",
		"test:unit": "jest --testPathIgnorePatterns=\"integration|e2e\" --passWithNoTests",
		"test:integration": "jest --testMatch=\"**/*.integration.spec.ts\" --passWithNoTests",
		"claude:check": "npm run lint && npm run typecheck && npm run test:unit",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:email": "jest --testNamePattern=\"email\" --passWithNoTests",
		"test:email:unit": "jest --testMatch=\"**/email*.spec.ts\" --testPathIgnorePatterns=\"e2e|integration\" --passWithNoTests",
		"test:email:e2e": "jest --testMatch=\"**/email*.e2e-spec.ts\" --passWithNoTests",
		"test:email:all": "npx ts-node test/email/run-email-tests.ts",
		"test:email:performance": "npx ts-node test/email/run-email-tests.ts --env=test --verbose",
		"generate": "echo 'Use: npx turbo run generate --filter=@repo/database'",
		"migrate:deploy": "cd ../../packages/database && npm run migrate:deploy",
		"migrate:dev": "cd ../../packages/database && npm run migrate:dev",
		"clean": "rm -rf dist .turbo"
	},
