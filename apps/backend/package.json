{
  "$schema": "https://json.schemastore.org/package",
  "name": "@repo/backend",
  "version": "0.0.2",
  "private": true,
  "license": "UNLICENSED",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:doppler": "doppler run -- tsc -p tsconfig.build.json",
    "dev": "doppler run -- tsx watch src/main.ts",
    "start": "node dist/main.js",
    "start:prod": "node dist/main.js",
    "lint": "eslint . --fix --no-warn-ignored",
    "typecheck": "tsc -p tsconfig.build.json --noEmit --incremental --skipLibCheck",
    "test": "npx jest",
    "test:unit": "npx jest --testPathIgnorePatterns=\"integration|e2e\" --passWithNoTests",
    "test:integration": "npx jest --testMatch=\"**/*.integration.spec.ts\" --passWithNoTests",
    "test:doppler": "doppler run -- npx jest",
    "clean": "rm -rf dist .turbo",
    "claude:check": "npm run lint && npm run typecheck"
  },
  "dependencies": {
    "@fastify/circuit-breaker": "^4.0.2",
    "@fastify/compress": "^8.1.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/csrf-protection": "^7.1.0",
    "@fastify/env": "^5.0.2",
    "@fastify/etag": "^6.0.3",
    "@fastify/helmet": "^13.0.1",
    "@fastify/multipart": "^9.2.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/request-context": "^6.2.1",
    "@fastify/sensible": "6.0.3",
    "@fastify/under-pressure": "9.0.3",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-fastify": "11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "11.0.0",
    "@nestjs/throttler": "6.4.0",
    "@react-email/components": "0.5.3",
    "@repo/shared": "workspace:*",
    "react": "^19.1.1",
    "@supabase/stripe-sync-engine": "0.41.1",
    "@supabase/supabase-js": "^2.57.4",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "handlebars": "4.7.8",
    "nest-commander": "3.19.1",
    "nestjs-pino": "4.4.0",
    "pino-http": "10.5.0",
    "posthog-js": "1.264.2",
    "puppeteer": "^24.20.0",
    "reflect-metadata": "0.2.2",
    "resend": "6.0.3",
    "rxjs": "^7.8.2",
    "stripe": "^18.5.0",
    "uuid": "13.0.0",
    "zod": "4.1.8"
  },
  "devDependencies": {
    "@fastify/cors": "11.1.0",
    "@golevelup/ts-jest": "0.7.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.6",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/jest": "30.0.0",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.1",
    "@types/supertest": "^6.0.3",
    "eslint": "9.35.0",
    "fastify": "5.6.0",
    "globals": "16.4.0",
    "jest": "^30.1.3",
    "pino-pretty": "13.1.1",
    "supertest": "^7.1.4",
    "ts-jest": "29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "5.9.2",
    "typescript-eslint": "8.43.0"
  },
  "overrides": {
    "path-to-regexp": "^8.3.0",
    "minimatch": "^10.0.3"
  }
}
