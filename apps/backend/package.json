{
	"name": "@repo/backend",
	"version": "0.0.2",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"build": "NODE_ENV=production NODE_OPTIONS='--max-old-space-size=4096' npx nest build",
		"build:tsc": "NODE_OPTIONS='--max-old-space-size=4096' tsc -p tsconfig.build.json",
		"dev": "NODE_OPTIONS='--max-old-space-size=4096' node start-dev.js",
		"dev:old": "NODE_OPTIONS='--max-old-space-size=4096' tsx watch src/main.ts",
		"dev:debug": "NODE_OPTIONS='--enable-source-maps --max-old-space-size=4096' tsx watch --inspect src/main.ts",
		"start": "npx nest start",
		"start:prod": "node dist/apps/backend/src/main.js",
		"start:prod:migrate": "npm run migrate:deploy && node dist/apps/backend/src/main.js",
		"lint": "eslint . --fix",
		"format": "prettier --write \"src/**/*.ts\"",
		"typecheck": "NODE_OPTIONS='--max-old-space-size=8192' tsc -p tsconfig.build.json --noEmit --incremental --skipLibCheck",
		"test": "jest",
		"test:unit": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"generate": "echo 'Use: npx turbo run generate --filter=@repo/database'",
		"migrate:deploy": "cd ../../packages/database && npm run migrate:deploy",
		"migrate:dev": "cd ../../packages/database && npm run migrate:dev",
		"prisma:studio": "cd ../../packages/database && npm run studio",
		"clean": "rm -rf dist .turbo"
	},
