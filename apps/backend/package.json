{
	"$schema": "https://json.schemastore.org/package",
	"name": "@repo/backend",
	"version": "0.0.2",
	"private": true,
	"license": "UNLICENSED",
	"engines": {
		"node": ">=22.14.0",
		"pnpm": ">=9"
	},
	"scripts": {
		"dev": "NODE_NO_WARNINGS=1 nest start --watch",
		"dev:clean": "pnpm clean && pnpm dev",
		"build": "nest build",
		"start": "node dist/main.js",
		"start:dev": "doppler run -- node dist/main.js",
		"start:prod": "NODE_ENV=production pnpm start",
		"lint": "eslint \"src/**/*.ts\" --ignore-pattern \"**/*.d.ts\"",
		"lint:fix": "pnpm lint --fix",
		"typecheck": "tsc --noEmit",
		"test": "pnpm run test:unit && pnpm run test:integration",
		"test:unit": "jest --testMatch=\"**/*.spec.ts\" --forceExit",
		"test:unit:clean": "jest --testMatch=\"**/*.spec.ts\" --forceExit",
		"test:integration": "jest --testMatch=\"**/*.integration.spec.ts\" --forceExit",
		"test:watch": "jest --watch",
		"clean": "rimraf dist coverage .turbo node_modules/.cache"
	},
	"dependencies": {
		"@nestjs/cache-manager": "3.0.1",
		"@nestjs/common": "^11.1.6",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.1.6",
		"@nestjs/event-emitter": "^3.0.1",
		"@nestjs/jwt": "^11.0.1",
		"@nestjs/passport": "11.0.5",
		"@nestjs/platform-express": "^11.1.6",
		"@nestjs/schedule": "6.0.1",
		"@nestjs/terminus": "11.0.0",
		"@nestjs/throttler": "6.4.0",
		"@react-email/components": "0.5.6",
		"@repo/shared": "workspace:*",
		"@supabase/stripe-sync-engine": "0.45.0",
		"@supabase/supabase-js": "^2.75.0",
		"@types/passport-jwt": "4.0.1",
		"cache-manager": "7.2.4",
		"compression": "^1.8.1",
		"cookie-parser": "^1.4.7",
		"exceljs": "4.4.0",
		"express": "^5.1.0",
		"handlebars": "4.7.8",
		"helmet": "^8.1.0",
		"nestjs-cls": "6.0.1",
		"passport": "0.7.0",
		"passport-jwt": "4.0.1",
		"pdfkit": "0.17.2",
		"puppeteer": "^24.25.0",
		"react": "19.2.0",
		"reflect-metadata": "0.2.2",
		"resend": "6.1.3",
		"rxjs": "^7.8.2",
		"stripe": "^19.1.0",
		"uuid": "13.0.0",
		"zod": "4.1.12"
	},
	"devDependencies": {
		"@golevelup/ts-jest": "0.7.0",
		"@nestjs/cli": "^11.0.10",
		"@nestjs/schematics": "^11.0.9",
		"@nestjs/testing": "^11.1.6",
		"@repo/eslint-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@swc/cli": "0.7.8",
		"@swc/core": "1.13.5",
		"@types/compression": "^1.8.1",
		"@types/cookie-parser": "^1.4.9",
		"@types/express": "^5.0.3",
		"@types/jest": "catalog:",
		"@types/node": "^24.7.2",
		"@types/pdfkit": "0.17.3",
		"@types/react": "catalog:",
		"@types/supertest": "^6.0.3",
		"eslint": "9.37.0",
		"globals": "16.4.0",
		"jest": "^30.2.0",
		"rimraf": "6.0.1",
		"supertest": "^7.1.4",
		"ts-jest": "29.4.5",
		"ts-node": "^10.9.2",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.1"
	},
	"overrides": {
		"path-to-regexp": "^8.3.0",
		"minimatch": "^10.0.3"
	}
}
