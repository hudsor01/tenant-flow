{
  "dashboard": {
    "id": null,
    "title": "TenantFlow - Payment Operations",
    "tags": ["tenantflow", "payments", "stripe"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Payment Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(payment_attempts_total{status=\"succeeded\"}[5m]) / rate(payment_attempts_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 85},
                {"color": "green", "value": 95}
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Payment Volume (Last 24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(payment_attempts_total[24h])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Revenue (Last 24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(payment_amount_total[24h]) / 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "currencyUSD"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Payment Processing Time",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, payment_duration_seconds_bucket)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 2},
                {"color": "red", "value": 5}
              ]
            },
            "unit": "s"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Payment Status Over Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(payment_attempts_total{status=\"succeeded\"}[5m])",
            "legendFormat": "Successful",
            "refId": "A"
          },
          {
            "expr": "rate(payment_attempts_total{status=\"failed\"}[5m])",
            "legendFormat": "Failed",
            "refId": "B"
          },
          {
            "expr": "rate(payment_attempts_total{status=\"pending\"}[5m])",
            "legendFormat": "Pending",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "reqps"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "Payment Methods Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (payment_method) (increase(payment_attempts_total{status=\"succeeded\"}[24h]))",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "Revenue by Currency",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(payment_amount_total[5m]) by (currency)",
            "legendFormat": "{{currency}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "currencyUSD"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 8,
        "title": "Failed Payments by Error Type",
        "type": "table",
        "targets": [
          {
            "expr": "sum by (error_type) (increase(payment_attempts_total{status=\"failed\"}[24h]))",
            "refId": "A",
            "format": "table"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "refresh": "30s"
  }
}