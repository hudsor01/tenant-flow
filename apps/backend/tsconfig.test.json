{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "TenantFlow Backend Test TypeScript Config",
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"types": ["node", "jest", "supabase"],
		"noEmit": true,
		"skipLibCheck": true,
		"strict": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false
	},
	"include": [
		"test/**/*",
		"src/**/*.spec.ts",
		"src/**/*.test.ts",
		"src/**/*.e2e-spec.ts"
	],
	"exclude": ["node_modules/**/*", "dist/**/*"]
}
