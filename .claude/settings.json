{
	"cleanupPeriodDays": 7,
	"enableAllProjectMcpServers": true,
	"env": {
		"OTEL_METRICS_EXPORTER": "otlp"
	},
	"permissions": {
		"allow": [],
		"deny": [],
		"defaultMode": "acceptEdits"
	},
	"hooks": {
		"PreToolUse": [
			{
				"matcher": "Bash(git add*)",
				"hooks": [
					{
						"type": "command",
						"command": "node ~/.claude/hooks/gitignore-enforcer.js"
					},
					{
						"type": "command",
						"command": "node ~/.claude/hooks/security-git-guard.js"
					}
				]
			},
			{
				"matcher": "Bash(git commit*)",
				"hooks": [
					{
						"type": "command",
						"command": "node ~/.claude/hooks/gitignore-enforcer.js"
					},
					{
						"type": "command",
						"command": "node ~/.claude/hooks/security-git-guard.js"
					}
				]
			},
			{
				"matcher": "Bash(git push*)",
				"hooks": [
					{
						"type": "command",
						"command": "node ~/.claude/hooks/security-git-guard.js"
					}
				]
			},
			{
				"matcher": "Task(*)",
				"hooks": [
					{
						"type": "command",
						"command": "node ~/.claude/hooks/mcp-server-reminder.js"
					}
				]
			}
		]
	}
}
