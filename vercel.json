{
	"buildCommand": "npm run build:frontend",
	"outputDirectory": "dist",
	"installCommand": "npm install",
	"functions": {
		"api/stripe-webhook.js": {
			"maxDuration": 30,
			"runtime": "nodejs20.x"
		},
		"api/create-subscription.js": {
			"maxDuration": 30,
			"runtime": "nodejs20.x"
		},
		"api/create-portal-session.js": {
			"maxDuration": 30,
			"runtime": "nodejs20.x"
		},
		"api/test.js": {
			"maxDuration": 30,
			"runtime": "nodejs20.x"
		}
	},
	"rewrites": [
		{
			"source": "/((?!api/).*)",
			"destination": "/index.html"
		}
	],
	"headers": [
		{
			"source": "/(.*)",
			"headers": [
				{
					"key": "X-Frame-Options",
					"value": "DENY"
				},
				{
					"key": "X-Content-Type-Options",
					"value": "nosniff"
				},
				{
					"key": "X-XSS-Protection",
					"value": "1; mode=block"
				},
				{
					"key": "Referrer-Policy",
					"value": "strict-origin-when-cross-origin"
				}
			]
		}
	]
}
