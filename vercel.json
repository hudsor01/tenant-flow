{
	"functions": {
		"api/stripe-webhook.js": {
			"maxDuration": 30
		},
		"api/create-subscription.js": {
			"maxDuration": 30
		},
		"api/create-portal-session.js": {
			"maxDuration": 30
		}
	},
	"headers": [
		{
			"source": "/(.*)",
			"headers": [
				{
					"key": "X-Frame-Options",
					"value": "DENY"
				},
				{
					"key": "X-Content-Type-Options",
					"value": "nosniff"
				},
				{
					"key": "X-XSS-Protection",
					"value": "1; mode=block"
				},
				{
					"key": "Referrer-Policy",
					"value": "strict-origin-when-cross-origin"
				}
			]
		}
	]
}
