{
	"functions": {
		"api/stripe-webhook.js": {
			"maxDuration": 30
		}
	},
	"rewrites": [
		{
			"source": "/((?!api|_next|_static|_vercel|assets|favicon.ico|robots.txt|sitemap.xml|sitemap-index.xml|manifest.json|google-site-verification.html|bing-site-verification.html|webhook.html).*)",
			"destination": "/index.html"
		}
	],
	"headers": [
		{
			"source": "/(.*)",
			"headers": [
				{
					"key": "X-Frame-Options",
					"value": "DENY"
				},
				{
					"key": "X-Content-Type-Options",
					"value": "nosniff"
				},
				{
					"key": "X-XSS-Protection",
					"value": "1; mode=block"
				},
				{
					"key": "Referrer-Policy",
					"value": "strict-origin-when-cross-origin"
				}
			]
		}
	]
}
