{
	"$schema": "https://json.schemastore.org/package",
	"name": "tenantflow",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"engines": {
		"node": ">=22.0.0 <25.0.0",
		"npm": ">=10.0.0"
	},
	"packageManager": "npm@11.5.2",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"turbo": "export $(grep -E '^TURBO_' .env.local 2>/dev/null | xargs) && turbo",
		"start": "cd apps/backend && npm run start",
		"build": "npm run build:fallback || turbo run build",
		"build:fallback": "npm run build:shared:fallback && npm run build:emails:fallback && npm run build:frontend:fallback && npm run build:backend:fallback",
		"build:staging": "npm run build",
		"build:production": "npm run build",
		"build:frontend": "npm run build:shared:fallback && npm run build:frontend:fallback || turbo run build --filter=@repo/shared && turbo run build --filter=@repo/frontend",
		"build:frontend:fallback": "npm run build --workspace=@repo/frontend",
		"build:backend": "npm run build:backend:fallback || turbo run build --filter=@repo/backend",
		"build:backend:fallback": "npm run build --workspace=@repo/backend",
		"build:shared": "npm run build:shared:fallback || turbo run build --filter=@repo/shared",
		"build:shared:fallback": "npm run build --workspace=@repo/shared",
		"build:emails:fallback": "npm run build --workspace=@repo/emails",
		"build:validate": "npm run build:shared && node -e \"console.log('âœ… Shared package built successfully')\" && npm run build:frontend",
		"build:database": "turbo run build --filter=@repo/database",
		"build:monorepo": "turbo run build --filter='!@repo/frontend'",
		"secrets:generate": "node scripts/manage-secrets.js generate-key",
		"secrets:check": "node scripts/manage-secrets.js check-strength",
		"claude:check": "npm run lint && npm run typecheck",
		"deployment:validate": "node .github/scripts/validate-deployment.js",
		"deployment:precommit": "node .github/scripts/pre-commit-deployment-check.js",
		"secrets:export": "node scripts/manage-secrets.js export-for-ci",
		"dev": "NODE_ENV=development turbo run dev --parallel",
		"lint": "turbo run lint",
		"lint:fix": "turbo run lint:fix",
		"format": "turbo run format",
		"typecheck": "turbo run typecheck -- --noErrorTruncation",
		"typecheck:strict": "turbo run typecheck -- --noErrorTruncation",
		"typecheck:watch": "turbo run typecheck -- --watch",
		"test": "npm run test:backend && npm run test:frontend",
		"test:unit": "npm run test:backend && npm run test:frontend",
		"test:backend": "cd apps/backend && npm run test:unit",
		"test:frontend": "cd apps/frontend && npm run test:unit",
		"generate": "echo 'Code generation available through individual tools: npm run update-supabase-types, npm run secrets:generate'",
		"update-supabase-types": "npx supabase gen types typescript --project-id \"bshjmbshupiibfiewpxb\" --schema public > packages/shared/src/types/supabase-generated.ts"
	},
	"devDependencies": {
		"@eslint/js": "9.34.0",
		"@eslint/object-schema": "2.1.6",
		"@eslint/plugin-kit": "0.3.5",
		"@golevelup/ts-jest": "0.7.0",
		"@humanfs/node": "0.16.6",
		"@next/env": "15.5.0",
		"@playwright/test": "1.55.0",
		"@repo/eslint-config": "*",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/express": "5.0.3",
		"@types/jest": "30.0.0",
		"@types/node": "^24.3.0",
		"@types/raf": "3.4.3",
		"@typescript-eslint/eslint-plugin": "^8.40.0",
		"@typescript-eslint/parser": "^8.40.0",
		"@vercel/node": "^5.3.13",
		"allure-playwright": "3.3.3",
		"autoprefixer": "10.4.21",
		"eslint": "^9.34.0",
		"eslint-config-next": "15.5.0",
		"eslint-config-turbo": "^2.5.6",
		"eslint-plugin-react-refresh": "^0.4.20",
		"eslint-plugin-storybook": "9.1.3",
		"eslint-plugin-turbo": "^2.5.6",
		"globals": "16.3.0",
		"jsdom": "^26.1.0",
		"postcss": "8.5.6",
		"prettier": "^3.6.2",
		"tailwindcss": "3.4.17",
		"ts-jest": "29.4.1",
		"tsconfig-paths-webpack-plugin": "4.2.0",
		"tsx": "4.20.4",
		"typescript": "5.9.2",
		"typescript-eslint": "^8.40.0"
	},
	"overrides": {
		"typescript": "5.9.2",
		"esbuild": "^0.25.9",
		"path-to-regexp": "^8.2.0",
		"undici": "^7.15.0",
		"tmp": "^0.2.5",
		"glob": "^11.0.3",
		"@types/glob": "^9.0.0",
		"@types/mdx": "^2.0.13",
		"minimatch": "^3.1.2",
		"rimraf": "^6.0.1",
		"sourcemap-codec": "npm:@jridgewell/sourcemap-codec@^1.5.5",
		"inflight": "npm:lru-cache@^11.1.0",
		"lightningcss": "1.30.1"
	},
	"dependencies": {
		"@nestjs/throttler": "6.4.0",
		"@supabase/supabase-js": "2.56.0",
		"class-validator": "0.14.2",
		"dompurify": "3.2.6",
		"jspdf": "3.0.1",
		"nest-winston": "^1.10.2",
		"stripe": "18.4.0",
		"turbo": "2.5.6"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{js,jsx,json,md}": [
			"prettier --write"
		]
	},
	"msw": {
		"workerDirectory": [
			"../frontend/public"
		]
	},
	"optionalDependencies": {
		"@next/swc-linux-x64-gnu": "15.5.0"
	}
}
