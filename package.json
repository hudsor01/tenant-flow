{
  "name": "tenantflow-turbo",
  "private": true,
  "version": "1.0.0",
  "packageManager": "npm@11.5.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:frontend": "turbo run build --filter=@tenantflow/frontend",
    "build:prod": "./scripts/build-production.sh",
    "install:prod": "./scripts/install-production.sh",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "check": "npm run lint && npm run typecheck",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "generate": "turbo gen",
    "format": "turbo run format",
    "clean": "turbo run clean",
    "claude:check": "(npm run lint && npm run typecheck) || echo 'Fix type/lint errors'",
    "deploy:vercel": "npm run build --filter=@tenantflow/frontend && echo 'Frontend ready for Vercel deployment'",
    "deploy:railway": "docker build -f Dockerfile -t tenantflow-backend . && echo 'Backend ready for Railway deployment'",
    "verify:env:frontend": "node scripts/verify-env-vars.js frontend",
    "verify:env:backend": "node scripts/verify-env-vars.js backend",
    "predeploy": "npm run check && npm run test:unit"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.54.1",
    "@supabase/supabase-js": "^2.53.0",
    "@tanstack/eslint-plugin-router": "^1.129.7",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@turbo/gen": "^2.5.5",
    "@types/helmet": "^4.0.0",
    "@types/node": "^24.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "allure-playwright": "^3.3.2",
    "dotenv": "^17.2.1",
    "eslint": "^9.32.0",
    "eslint-config-turbo": "^2.5.5",
    "eslint-plugin-turbo": "^2.5.5",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "plop": "^4.0.1",
    "pluralize": "^8.0.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "turbo": "^2.5.5",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "path-to-regexp": "^8.2.0",
    "esbuild": "^0.25.8",
    "undici": "^7.12.0",
    "typescript": "5.8.3",
    "minimatch": "^10.0.3"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "vercel": "^44.6.4"
  }
}
