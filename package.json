{
	"$schema": "https://json.schemastore.org/package",
	"name": "tenantflow",
	"private": true,
	"version": "1.0.1",
	"type": "module",
	"engines": {
		"node": ">=22.0.0 <25.0.0",
		"npm": ">=10.0.0"
	},
	"os": [
		"darwin",
		"linux",
		"win32"
	],
	"cpu": [
		"arm64",
		"x64"
	],
	"packageManager": "npm@10.0.0",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "turbo run dev",
		"build": "turbo run build",
		"lint": "turbo run lint",
		"typecheck": "turbo run typecheck",
		"test": "turbo run test",
		"test:unit": "turbo run test:unit",
		"format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
		"format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
		"docs:packages": "find . -name 'package.json' -not -path '*/node_modules/*' | sort",
		"docs:configs": "find . -name '*.config.*' -not -path '*/node_modules/*' | sort"
	},
	"devDependencies": {
		"@commitlint/cli": "19.8.1",
		"@commitlint/config-conventional": "19.8.1",
		"@size-limit/preset-app": "11.2.0",
		"@size-limit/webpack": "11.2.0",
		"detect-secrets": "1.0.6",
		"eslint": "^9.34.0",
		"eslint-config-turbo": "^2.5.6",
		"eslint-plugin-turbo": "^2.5.6",
		"husky": "9.1.7",
		"lint-staged": "16.1.5",
		"prettier": "^3.6.2",
		"typescript": "5.9.2"
	},
	"overrides": {
		"typescript": "5.9.2",
		"esbuild": "^0.25.9",
		"path-to-regexp": "^8.2.0",
		"undici": "^7.15.0",
		"tmp": "^0.2.5",
		"glob": "^11.0.3",
		"@types/glob": "^9.0.0",
		"@types/mdx": "^2.0.13",
		"minimatch": "^3.1.2",
		"rimraf": "^6.0.1",
		"sourcemap-codec": "npm:@jridgewell/sourcemap-codec@^1.5.5",
		"inflight": "npm:lru-cache@^11.1.0",
		"lightningcss": "1.30.1"
	},
	"optionalDependencies": {
		"turbo-darwin-arm64": "2.5.6",
		"turbo-linux-64": "2.5.6",
		"turbo-linux-arm64": "2.5.6"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx}": [
			"eslint --fix --max-warnings 0",
			"prettier --write"
		],
		"*.{json,md,yml,yaml}": [
			"prettier --write"
		],
		"*.{ts,tsx}": [
			"bash -c 'npm run typecheck'"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"dependencies": {
		"turbo": "2.5.6"
	}
}
