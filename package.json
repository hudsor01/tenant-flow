{
	"name": "tenantflow",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"engines": {
		"node": ">=22.0.0",
		"npm": ">=10.0.0"
	},
	"packageManager": "npm@10.9.3",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"turbo": "export $(grep -E '^TURBO_' .env.local 2>/dev/null | xargs) && turbo",
		"build": "npm run build:database && npm run build:shared && npm run build:frontend",
		"build:staging": "dotenv -c staging -- npm run build",
		"build:production": "dotenv -c production -- npm run build",
		"build:frontend": "cd apps/frontend && npm run build",
		"build:backend": "cd apps/backend && npm run build",
		"build:shared": "cd packages/shared && npm run build",
		"build:monorepo": "npm run build:shared && npm run db:generate && npm run build:backend",
		"verify:build": "npm run build:monorepo && echo 'âœ… All builds successful'",
		"env:validate": "dotenv -e .env.local -- node scripts/validate-env.js",
		"env:validate:staging": "dotenv -c staging -- node scripts/validate-env.js staging",
		"env:validate:production": "dotenv -c production -- node scripts/validate-env.js production",
		"secrets:generate": "node scripts/manage-secrets.js generate-key",
		"secrets:check": "dotenv -e .env.local -- node scripts/manage-secrets.js check-strength",
		"claude:check": "npm run lint && npm run typecheck && npm run test:unit",
		"secrets:export": "dotenv -e .env.local -- node scripts/manage-secrets.js export-for-ci",
		"build:database": "npx turbo run build --filter=@repo/database",
		"dev": "dotenv -c development -- turbo run dev --parallel",
		"dev:staging": "dotenv -c staging -- turbo run dev --parallel",
		"dev:production": "dotenv -c production -- turbo run dev --parallel",
		"lint": "dotenv -e .env.local -- turbo run lint",
		"lint:fix": "dotenv -e .env.local -- turbo run lint:fix",
		"format": "dotenv -e .env.local -- turbo run format",
		"typecheck": "dotenv -e .env.local -- turbo run typecheck",
		"test": "dotenv -e .env.local -- turbo run test",
		"test:unit": "dotenv -e .env.local -- turbo run test:unit",
		"test:integration": "dotenv -e .env.local -- turbo run test:integration",
		"test:coverage": "dotenv -e .env.local -- turbo run test:coverage",
		"test:e2e": "dotenv -e .env.local -- turbo run test:e2e",
		"test:e2e:visual": "npx playwright test tests/e2e/specs/visual/landing-page.visual.spec.ts",
		"test:visual:update": "npx playwright test tests/e2e/specs/visual/landing-page.visual.spec.ts --update-snapshots",
		"visual:baseline": "./scripts/generate-visual-baselines.sh",
		"cache:optimize": "node scripts/optimize-edge-cache.js",
		"generate": "echo 'Code generation available through individual tools: npm run update-supabase-types, npm run secrets:generate'",
		"clean": "npx turbo run clean",
		"storybook": "npx turbo run storybook --filter=@repo/storybook",
		"storybook:build": "npx turbo run build-storybook --filter=@repo/storybook",
		"storybook:test": "npx turbo run test-storybook --filter=@repo/storybook",
		"ci:full": "dotenv -e .env.local -- turbo run typecheck lint build --parallel",
		"ci:quick": "dotenv -e .env.local -- turbo run typecheck lint --parallel --filter='[HEAD^1]'",
		"ci:validate": "dotenv -e .env.local -- npm run typecheck && npm run lint",
		"update-supabase-types": "npx supabase gen types typescript --project-id \"bshjmbshupiibfiewpxb\" --schema public > packages/shared/src/types/supabase-generated.ts"
	},
	"devDependencies": {
		"@eslint/js": "9.33.0",
		"@playwright/test": "^1.54.2",
		"@testing-library/jest-dom": "^6.7.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^24.3.0",
		"@typescript-eslint/eslint-plugin": "^8.39.1",
		"@typescript-eslint/parser": "^8.39.1",
		"@vercel/node": "^5.3.13",
		"allure-playwright": "3.3.3",
		"dotenv-cli": "10.0.0",
		"eslint": "^9.33.0",
		"eslint-config-turbo": "^2.5.6",
		"eslint-plugin-react-refresh": "^0.4.20",
		"eslint-plugin-turbo": "^2.5.6",
		"globals": "16.3.0",
		"jsdom": "^26.1.0",
		"lightningcss": "1.30.1",
		"postcss": "8.5.6",
		"prettier": "^3.6.2",
		"tsx": "4.20.4",
		"turbo": "2.5.6",
		"typescript": "5.9.2",
		"typescript-eslint": "^8.39.1"
	},
	"overrides": {
		"typescript": "5.9.2",
		"esbuild": "^0.25.9",
		"path-to-regexp": "^8.2.0",
		"undici": "^7.13.0",
		"tmp": "^0.2.5",
		"glob": "^11.0.3",
		"@types/glob": "^8.1.0",
		"@types/mdx": "^2.0.13",
		"minimatch": "^9.0.5",
		"rimraf": "^6.0.1",
		"sourcemap-codec": "npm:@jridgewell/sourcemap-codec@^1.5.5",
		"inflight": "npm:lru-cache@^11.1.0"
	},
	"dependencies": {
		"@nestjs/throttler": "6.4.0",
		"@supabase/supabase-js": "2.55.0",
		"class-validator": "0.14.2",
		"dompurify": "3.2.6",
		"jspdf": "3.0.1",
		"nest-winston": "^1.10.2",
		"stripe": "18.4.0"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"eslint --fix --max-warnings 0",
			"prettier --write"
		],
		"*.{js,jsx,json,md}": [
			"prettier --write"
		]
	},
	"msw": {
		"workerDirectory": [
			"../frontend/public"
		]
	}
}
