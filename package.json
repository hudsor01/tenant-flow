{
	"$schema": "https://json.schemastore.org/package",
	"name": "tenantflow",
	"private": true,
	"overrides": {
		"typescript": "5.9.2",
		"esbuild": "^0.25.9",
		"path-to-regexp": "^8.2.0",
		"undici": "^7.15.0",
		"tmp": "^0.2.5",
		"glob": "^11.0.3",
		"@types/glob": "^9.0.0",
		"@types/mdx": "^2.0.13",
		"minimatch": "3.1.2",
		"cross-spawn": "^7.0.3",
		"rimraf": "^6.0.1",
		"sourcemap-codec": "npm:@jridgewell/sourcemap-codec@^1.5.5",
		"inflight": "npm:lru-cache@^11.1.0",
		"lightningcss": "1.30.1"
	},
	"version": "1.0.1",
	"type": "module",
	"engines": {
		"node": ">=22.0.0 <25.0.0",
		"npm": ">=10.0.0"
	},
	"os": [
		"darwin",
		"linux",
		"win32"
	],
	"cpu": [
		"arm64",
		"x64"
	],
	"packageManager": "npm@10.0.0",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"turbo": "export $(grep -E '^TURBO_' .env.local 2>/dev/null | xargs) && turbo",
		"start": "cd apps/backend && npm run start",
		"dev": "NODE_ENV=development turbo run dev --parallel",
		"build": "turbo run build",
		"build:staging": "turbo run build",
		"build:production": "turbo run build",
		"build:frontend": "turbo run build --filter=@repo/shared && turbo run build --filter=@repo/frontend",
		"build:backend": "turbo run build --filter=@repo/backend",
		"build:shared": "turbo run build --filter=@repo/shared",
		"build:validate": "npm run build:shared && node -e \"console.log('âœ… Shared package built successfully')\" && npm run build:frontend",
		"build:database": "turbo run build --filter=@repo/database",
		"build:monorepo": "turbo run build --filter='!@repo/frontend'",
		"secrets:generate": "node scripts/manage-secrets.js generate-key",
		"secrets:check": "node scripts/manage-secrets.js check-strength",
		"secrets:export": "node scripts/manage-secrets.js export-for-ci",
		"claude:check": "npm run lint && npm run typecheck",
		"pre-deploy": "./scripts/validate-production.sh",
		"prepare": "command -v pre-commit >/dev/null 2>&1 && pre-commit install || echo 'pre-commit not installed, skipping hook setup'",
		"lint": "turbo run lint",
		"lint:fix": "turbo run lint:fix",
		"format": "turbo run format",
		"typecheck": "turbo run typecheck -- --noErrorTruncation",
		"typecheck:strict": "turbo run typecheck -- --noErrorTruncation",
		"typecheck:watch": "turbo run typecheck -- --watch",
		"test": "turbo run test:unit",
		"test:unit": "turbo run test:unit",
		"generate": "echo 'Code generation available through individual tools: npm run update-supabase-types, npm run secrets:generate'",
		"update-supabase-types": "npx supabase gen types typescript --project-id \"bshjmbshupiibfiewpxb\" --schema public > packages/shared/src/types/supabase-generated.ts",
		"docs:packages": "find . -name 'package.json' -not -path '*/node_modules/*' | sort",
		"docs:configs": "find . -name '*.config.*' -not -path '*/node_modules/*' | sort"
	},
	"devDependencies": {
		"@commitlint/cli": "19.8.1",
		"@commitlint/config-conventional": "19.8.1",
		"@eslint/js": "9.34.0",
		"@eslint/object-schema": "2.1.6",
		"@eslint/plugin-kit": "0.3.5",
		"@humanfs/node": "0.16.6",
		"@playwright/test": "1.55.0",
		"@repo/eslint-config": "*",
		"@size-limit/preset-app": "11.2.0",
		"@size-limit/webpack": "11.2.0",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/express": "5.0.3",
		"@types/node": "24.3.0",
		"@types/raf": "3.4.3",
		"@types/react": "19.1.12",
		"@types/react-dom": "19.1.8",
		"@typescript-eslint/eslint-plugin": "^8.41.0",
		"@typescript-eslint/parser": "^8.41.0",
		"@vercel/node": "^5.3.16",
		"allure-playwright": "3.3.3",
		"autoprefixer": "10.4.21",
		"detect-secrets": "1.0.6",
		"eslint": "^9.34.0",
		"eslint-config-next": "15.5.2",
		"eslint-config-turbo": "^2.5.6",
		"eslint-plugin-react-refresh": "^0.4.20",
		"eslint-plugin-storybook": "9.1.3",
		"eslint-plugin-turbo": "^2.5.6",
		"globals": "16.3.0",
		"jsdom": "^26.1.0",
		"lint-staged": "16.1.5",
		"pre-commit": "1.2.2",
		"prettier": "^3.6.2",
		"tsconfig-paths-webpack-plugin": "4.2.0",
		"tsx": "4.20.5",
		"turbo": "2.5.6",
		"typescript": "5.9.2",
		"typescript-eslint": "^8.41.0",
		"yarn": "1.22.22"
	},
	"dependencies": {
		"dompurify": "3.2.6"
	},
	"optionalDependencies": {
		"@rollup/rollup-android-arm-eabi": "4.49.0",
		"@rollup/rollup-darwin-arm64": "4.49.0",
		"@rollup/rollup-linux-arm64": "4.48.1",
		"@rollup/rollup-linux-x64": "4.48.1",
		"@rollup/rollup-win32-arm64": "4.48.1",
		"@rollup/rollup-win32-ia32": "4.48.1",
		"@rollup/rollup-win32-x64-msvc": "4.49.0",
		"turbo-darwin-64": "2.5.6",
		"turbo-darwin-arm64": "2.5.6",
		"turbo-linux-64": "2.5.6",
		"turbo-linux-arm64": "2.5.6"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"bash -c 'npm run typecheck'"
		],
		"*.{js,jsx,json,md}": [
			"prettier --write"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"msw": {
		"workerDirectory": [
			"../frontend/public"
		]
	}
}
