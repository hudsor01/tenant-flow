{
  "name": "tenantflow",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@11.5.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:database && npm run build:shared && npm run build:frontend",
    "build:frontend": "cd apps/frontend && npm run build",
    "build:backend": "cd apps/backend && npm run build",
    "build:shared": "cd packages/shared && npm run build",
    "build:monorepo": "npm run build:shared && npm run db:generate && npm run build:backend",
    "verify:build": "npm run build:monorepo && echo 'âœ… All builds successful'",
    "prisma:generate": "prisma generate --schema=packages/database/prisma/schema.prisma",
    "prebuild": "npm run prisma:generate",
    "postinstall": "if [ \"$VERCEL\" != \"1\" ] && [ \"$NODE_ENV\" != \"production\" ]; then npm run prisma:generate; fi",
    "build:database": "npx turbo run build --filter=@repo/database",
    "dev": "npx turbo run dev --parallel",
    "lint": "npx turbo run lint",
    "lint:fix": "npx turbo run lint:fix",
    "format": "npx turbo run format",
    "format:check": "npx turbo run format:check",
    "check": "npm run lint && npm run typecheck",
    "typecheck": "npx turbo run typecheck",
    "test": "npx turbo run test",
    "test:unit": "npx turbo run test:unit",
    "test:coverage": "npx turbo run test:coverage",
    "test:e2e": "npx turbo run test:e2e",
    "test:e2e:visual": "npx playwright test tests/e2e/specs/visual/landing-page.visual.spec.ts",
    "test:visual:update": "npx playwright test tests/e2e/specs/visual/landing-page.visual.spec.ts --update-snapshots",
    "visual:baseline": "./scripts/generate-visual-baselines.sh",
    "deployment:monitor": "node scripts/deployment-performance-monitor.js",
    "cache:optimize": "node scripts/optimize-edge-cache.js",
    "generate": "npx turbo gen",
    "clean": "npx turbo run clean",
    "claude:check": "(npm run lint && npm run typecheck) || echo 'Fix type/lint errors'",
    "ci:local": "./scripts/ci-local.sh",
    "ci:local:fix": "./scripts/ci-local.sh --fix",
    "ci:quick": "npx turbo run typecheck lint --parallel --filter='[HEAD^1]'",
    "ci:full": "npx turbo run typecheck lint build --parallel",
    "ci:changed": "npx turbo run build --filter='[HEAD^1]'",
    "ci:optimize": "./scripts/optimize-ci.sh",
    "ci:cache:clear": "rm -rf .turbo node_modules/.cache .eslintcache",
    "ci:install-hooks": "./scripts/install-hooks.sh",
    "ci:test-scripts": "./scripts/test-ci-scripts.sh",
    "deploy:test": "./scripts/test-deployment-readiness.sh",
    "deploy:test:full": "./scripts/deployment-readiness-comprehensive.sh",
    "deploy:test:docker": "./scripts/test-docker-build.sh",
    "deploy:test:railway": "./scripts/test-with-railway-env.sh",
    "db:generate": "npx turbo run @repo/database#generate",
    "db:push": "cd packages/database && npm run db:push",
    "db:studio": "cd packages/database && npm run studio",
    "db:migrate": "cd packages/database && npm run migrate:dev",
    "db:reset": "cd packages/database && npm run migrate:reset",
    "db:validate": "cd packages/database && npx prisma validate"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.54.2",
    "@supabase/supabase-js": "^2.54.0",
    "@tanstack/eslint-plugin-router": "^1.131.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@turbo/gen": "^2.5.5",
    "@types/node": "^24.2.1",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/zxcvbn": "^4.4.5",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vercel/node": "^5.3.11",
    "@vitest/coverage-v8": "^3.2.4",
    "allure-playwright": "^3.3.3",
    "dotenv": "^17.2.1",
    "eslint": "^9.33.0",
    "eslint-config-turbo": "^2.5.5",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-turbo": "^2.5.5",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "prisma": "^6.8.2",
    "tsx": "^4.20.3",
    "turbo": "^2.5.5",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "overrides": {
    "typescript": "5.9.2",
    "esbuild": "^0.25.8",
    "path-to-regexp": "^8.2.0",
    "undici": "^7.13.0",
    "tmp": "^0.2.5",
    "glob": "^11.0.3",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@prisma/client": "^6.8.2",
    "nest-winston": "^1.10.2",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "vercel": "^44.7.3",
    "zxcvbn": "^4.4.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  }
}
