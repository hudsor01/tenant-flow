{
	"name": "tenantflow",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"engines": {
		"node": ">=22.0.0 <25.0.0",
		"npm": ">=10.0.0"
	},
	"packageManager": "npm@11.5.2",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"turbo": "export $(grep -E '^TURBO_' .env.local 2>/dev/null | xargs) && turbo",
		"start": "cd apps/backend && npm run start",
		"build": "turbo run build",
		"build:staging": "turbo run build",
		"build:production": "turbo run build",
		"build:frontend": "cd packages/shared && npm run build && cd ../../apps/frontend && npm run build",
		"build:backend": "turbo run build --filter=@repo/backend",
		"build:shared": "turbo run build --filter=@repo/shared",
		"build:database": "turbo run build --filter=@repo/database",
		"build:monorepo": "turbo run build --filter='!@repo/frontend'",
		"secrets:generate": "node scripts/manage-secrets.js generate-key",
		"secrets:check": "node scripts/manage-secrets.js check-strength",
		"claude:check": "npm run lint && npm run typecheck",
		"secrets:export": "node scripts/manage-secrets.js export-for-ci",
		"dev": "turbo run dev --parallel",
		"lint": "turbo run lint --filter='!@repo/storybook'",
		"lint:fix": "turbo run lint:fix --filter='!@repo/storybook'",
		"format": "turbo run format --filter='!@repo/storybook'",
		"typecheck": "turbo run typecheck --filter='!@repo/storybook'",
		"test": "turbo run test:unit",
		"test:unit": "turbo run test:unit",
		"generate": "echo 'Code generation available through individual tools: npm run update-supabase-types, npm run secrets:generate'",
		"update-supabase-types": "npx supabase gen types typescript --project-id \"bshjmbshupiibfiewpxb\" --schema public > packages/shared/src/types/supabase-generated.ts"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.2",
		"@eslint/config-array": "0.21.0",
		"@eslint/eslintrc": "3.3.1",
		"@eslint/js": "9.33.0",
		"@eslint/object-schema": "2.1.6",
		"@eslint/plugin-kit": "0.3.5",
		"@humanfs/node": "0.16.6",
		"@playwright/test": "1.54.2",
		"@testing-library/jest-dom": "^6.7.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/express": "5.0.3",
		"@types/node": "^24.3.0",
		"@typescript-eslint/eslint-plugin": "^8.39.1",
		"@typescript-eslint/parser": "^8.39.1",
		"@vercel/node": "^5.3.13",
		"allure-playwright": "3.3.3",
		"eslint": "^9.33.0",
		"eslint-config-turbo": "^2.5.6",
		"eslint-plugin-react-refresh": "^0.4.20",
		"eslint-plugin-storybook": "9.1.2",
		"eslint-plugin-turbo": "^2.5.6",
		"globals": "16.3.0",
		"jsdom": "^26.1.0",
		"lightningcss": "1.30.1",
		"postcss": "8.5.6",
		"prettier": "^3.6.2",
		"tsconfig-paths-webpack-plugin": "4.2.0",
		"tsx": "4.20.4",
		"turbo": "2.5.6",
		"typescript": "5.9.2",
		"typescript-eslint": "^8.39.1"
	},
	"overrides": {
		"typescript": "5.9.2",
		"esbuild": "^0.25.9",
		"path-to-regexp": "^8.2.0",
		"undici": "^7.14.0",
		"tmp": "^0.2.5",
		"glob": "^11.0.3",
		"@types/glob": "^9.0.0",
		"@types/mdx": "^2.0.13",
		"minimatch": "^10.0.3",
		"rimraf": "^6.0.1",
		"sourcemap-codec": "npm:@jridgewell/sourcemap-codec@^1.5.5",
		"inflight": "npm:lru-cache@^11.1.0",
		"@humanwhocodes/config-array": "npm:@eslint/config-array@^0.21.0",
		"@humanwhocodes/object-schema": "npm:@eslint/object-schema@^2.1.6"
	},
	"dependencies": {
		"@nestjs/throttler": "6.4.0",
		"@supabase/supabase-js": "2.55.0",
		"class-validator": "0.14.2",
		"dompurify": "3.2.6",
		"jspdf": "3.0.1",
		"nest-winston": "^1.10.2",
		"stripe": "18.4.0"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{js,jsx,json,md}": [
			"prettier --write"
		]
	},
	"msw": {
		"workerDirectory": [
			"../frontend/public"
		]
	}
}
