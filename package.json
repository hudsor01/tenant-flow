{
	"$schema": "https://json.schemastore.org/package",
	"name": "tenantflow",
	"private": true,
	"version": "1.0.1",
	"type": "module",
	"engines": {
		"node": ">=22.16.0",
		"pnpm": ">=9"
	},
	"packageManager": "pnpm@10.23.0",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "doppler run -- turbo run dev",
		"dev:clean": "pnpm clean && pnpm dev",
		"dev:backend": "doppler run -- pnpm --filter @repo/backend dev",
		"dev:frontend": "doppler run -- pnpm --filter @repo/frontend dev",
		"build": "NODE_ENV=production doppler run -- turbo run build",
		"build:backend": "doppler run -- turbo run build --filter=@repo/backend",
		"build:frontend": "NODE_ENV=production doppler run -- turbo run build --filter=@repo/frontend",
		"build:shared": "turbo run build --filter=@repo/shared",
		"build:ci": "doppler run -- turbo run build",
		"lint": "turbo run lint",
		"lint:fix": "turbo run lint:fix",
		"typecheck": "turbo run typecheck",
		"test": "turbo run test:unit test:integration",
		"test:all": "pnpm test:unit && doppler run -- pnpm test:integration && doppler run -- pnpm test:e2e",
		"test:unit": "turbo run test:unit",
		"test:unit:backend": "pnpm --filter @repo/backend test:unit",
		"test:unit:frontend": "pnpm --filter @repo/frontend test:unit",
		"test:unit:watch": "pnpm --filter @repo/backend test:unit -- --watch",
		"test:unit:coverage": "pnpm --filter @repo/backend test:unit --coverage",
		"test:integration": "doppler run -- pnpm --filter @repo/backend test:integration",
		"test:integration:watch": "doppler run -- pnpm --filter @repo/backend test:integration -- --watch",
		"test:e2e": "doppler run -- pnpm exec playwright test",
		"test:e2e:tenant": "doppler run -- pnpm --filter @repo/e2e-tests test:chromium -- tenant-management/",
		"test:e2e:visual": "doppler run -- pnpm exec playwright test --project=chromium-visual",
		"test:e2e:ui": "doppler run -- pnpm exec playwright test --ui",
		"test:e2e:shard": "doppler run -- pnpm --filter @repo/e2e-tests exec playwright test --shard",
		"test:e2e:debug": "doppler run -- PWDEBUG=1 pnpm exec playwright test",
		"test:ci": "CI=true turbo run test:unit test:integration --concurrency=2",
		"db:push": "doppler run -- supabase db push",
		"db:pull": "doppler run -- supabase db pull",
		"db:reset": "doppler run -- supabase db reset",
		"clean": "turbo run clean",
		"workspace:info": "pnpm list -r --depth -1",
		"validate": "pnpm clean && pnpm build:shared && pnpm typecheck && pnpm lint && pnpm test:unit && doppler run -- pnpm test:integration && echo '✅ ALL VALIDATION PASSED - READY TO COMMIT'",
		"validate:quick": "pnpm typecheck && pnpm lint && pnpm test:unit && echo '✅ QUICK VALIDATION PASSED'",
		"validate:clean": "pnpm typecheck && pnpm lint && pnpm --filter @repo/backend test:unit && echo '✅ CLEAN VALIDATION PASSED'",
		"audit:routes": "tsx scripts/audit-api-routes.ts",
		"stripe:migrate": "doppler run -- pnpm --filter @repo/backend stripe:migrate"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"msw": {
		"workerDirectory": [
			"../frontend/public"
		]
	},
	"pnpm": {
		"overrides": {
			"@tanstack/query-core": "5.90.10",
			"typescript": "^5.9.3",
			"path-to-regexp": "^8.3.0",
			"undici": "^7.16.0",
			"cross-spawn": "^7.0.6",
			"lightningcss": "1.30.2",
			"esbuild": "^0.27.0",
			"@types/react": "19.2.7",
			"@types/react-dom": "19.2.3",
			"body-parser": ">=2.2.1"
		},
		"onlyBuiltDependencies": [
			"supabase"
		]
	},
	"dependencies": {
		"@commitlint/cli": "20.1.0",
		"@commitlint/config-conventional": "20.0.0",
		"@repo/eslint-config": "workspace:*",
		"husky": "9.1.7",
		"prettier": "catalog:default",
		"tsx": "^4.21.0",
		"typescript": "catalog:default"
	},
	"devDependencies": {
		"@next/eslint-plugin-next": "~16.0.3",
		"@playwright/test": "1.57.0",
		"eslint": "catalog:default",
		"globals": "16.5.0",
		"playwright": "1.57.0",
		"turbo": "2.6.1",
		"vercel": "49.1.2"
	}
}
