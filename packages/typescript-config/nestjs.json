{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "TenantFlow NestJS TypeScript Config - NodeNext Mode (October 2025)",
	"extends": "./base.json",
	"compilerOptions": {
		"lib": ["ES2022"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2022",
		"jsx": "react-jsx",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"isolatedModules": false,
		"verbatimModuleSyntax": false,
		"noEmit": false,
		"inlineSources": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/*.spec.ts",
		"**/*.e2e-spec.ts",
		"**/test/**/*",
		"**/tests/**/*",
		"src/test-utils"
	]
}
