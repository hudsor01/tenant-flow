{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "TenantFlow NestJS TypeScript Config",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "CommonJS",
    // NODE RESOLUTION: Used for Node.js runtime environments
    // This provides traditional Node.js module resolution for:
    // - CommonJS require() semantics and compatibility
    // - node_modules traversal and package.json main/exports
    // - Decorator support required by NestJS dependency injection
    // - Direct execution without bundling step
    "moduleResolution": "node",
    "target": "ES2022",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "sourceMap": true,
    "inlineSources": true,
    "incremental": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "isolatedModules": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.e2e-spec.ts",
    "**/test/**/*",
    "**/tests/**/*",
    "src/test-utils"
  ]
}