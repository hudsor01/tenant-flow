{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "TenantFlow Frontend Library TypeScript Config",
  "extends": "./base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "composite": false,
    "jsx": "react-jsx",
    "removeComments": false,
    // BUNDLER RESOLUTION: For frontend/UI libraries
    // This config should only be used for libraries that are consumed
    // by bundler environments (Vite, Webpack, etc.) not Node.js runtime
    "module": "ESNext",
    "moduleResolution": "Bundler"
  }
}