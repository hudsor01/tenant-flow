{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "TenantFlow React TypeScript Config",
  "extends": "./base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    // BUNDLER RESOLUTION: Used for Vite/bundler environments
    // This enables advanced module resolution features like:
    // - Import maps, conditional exports, subpath imports
    // - TypeScript file imports with proper bundler handling
    // - Optimal tree-shaking and code splitting
    "moduleResolution": "Bundler",
    "noEmit": true,
    "allowImportingTsExtensions": false,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "isolatedModules": true,
    "useDefineForClassFields": true
  }
}