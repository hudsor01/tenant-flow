{
	"compilerOptions": {
		"jsx": "react-jsx",
		"outDir": "./dist",
		"rootDir": "./",
		"declaration": true,
		"declarationMap": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"target": "es2022",
		"lib": ["es2022", "dom"],
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false,
		"types": ["node", "react", "react-dom"]
	},
	"include": ["./**/*.ts", "./**/*.tsx"],
	"exclude": ["node_modules", "dist"]
}
