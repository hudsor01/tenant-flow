{
	"extends": "../typescript-config/base.json",
	"compilerOptions": {
		"jsx": "react-jsx",
		"outDir": "./dist",
		"rootDir": "./",
		"declaration": true,
		"declarationMap": true,
		"noEmit": false,
		"composite": true,
		"moduleResolution": "bundler",
		"types": ["node", "react", "react-dom"],
		"skipLibCheck": true,
		"lib": ["ES2022", "DOM", "DOM.Iterable"]
	},
	"include": ["*.ts", "*.tsx", "styles/*.ts"],
	"exclude": ["node_modules", "dist"]
}
