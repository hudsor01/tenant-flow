{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "TenantFlow Shared Package Config (October 2025)",
	"extends": "../typescript-config/library.json",
	"compilerOptions": {
		"composite": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": ".",
		"tsBuildInfoFile": "./dist/.tsbuildinfo"
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/*.spec.ts",
		"src/types/frontend-only.ts",
		"vitest.config.ts"
	]
}
