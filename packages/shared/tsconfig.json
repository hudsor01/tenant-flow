{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "TenantFlow Shared Package Config",
  // DUAL COMPATIBILITY: This package is consumed by both frontend and backend
  // Uses ESNext module output for bundler compatibility (Vite handles Node.js imports)
  // The package.json "type": "module" with dual exports enables both environments
  "extends": "@repo/typescript-config/library.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@repo/database": ["../database/src"],
      "@repo/database/*": ["../database/src/*"]
    },
    "types": ["node"],
    "module": "ESNext",
    "moduleResolution": "Bundler"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
