{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "TenantFlow Shared Package Config",
	"extends": "../typescript-config/library.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@repo/shared/*": ["./src/*"]
		},
		"outDir": "./dist",
		"rootDir": "./src",
		"tsBuildInfoFile": "./dist/.tsbuildinfo",
		"lib": ["ES2022", "DOM", "DOM.Iterable"]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"**/__tests__/**",
		"**/test/**",
		"**/*.test.ts",
		"**/*.spec.ts"
	]
}
