{
	"$schema": "https://json.schemastore.org/package",
	"name": "@repo/shared",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"description": "Shared types and utilities for TenantFlow monorepo",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./types/*": {
			"types": "./dist/types/*.d.ts",
			"default": "./dist/types/*.js"
		},
		"./constants/*": {
			"types": "./dist/constants/*.d.ts",
			"default": "./dist/constants/*.js"
		},
		"./lib/*": {
			"types": "./dist/lib/*.d.ts",
			"default": "./dist/lib/*.js"
		},
		"./utils/*": {
			"types": "./dist/utils/*.d.ts",
			"default": "./dist/utils/*.js"
		},
		"./config/*": {
			"types": "./dist/config/*.d.ts",
			"default": "./dist/config/*.js"
		},
		"./security/*": {
			"types": "./dist/security/*.d.ts",
			"default": "./dist/security/*.js"
		},
		"./validation/*": {
			"types": "./dist/validation/*.d.ts",
			"default": "./dist/validation/*.js"
		}
	},
	"files": [
		"dist/**"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"typecheck": "tsc --noEmit",
		"lint": "eslint \"src/**/*.ts\"",
		"lint:fix": "pnpm lint --fix",
		"update-types": "node scripts/update-supabase-types.js",
		"clean": "rimraf dist .turbo"
	},
	"dependencies": {
		"@supabase/ssr": "^0.7.0",
		"@supabase/supabase-js": "^2.57.4",
		"posthog-js": "catalog:",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"@types/express": "^5.0.3",
		"@types/node": "^24.5.2",
		"@types/react": "catalog:",
		"@types/react-dom": "catalog:",
		"rimraf": "6.0.1",
		"typescript": "^5.9.2"
	}
}
