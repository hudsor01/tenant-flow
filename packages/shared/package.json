{
	"$schema": "https://json.schemastore.org/package",
	"name": "@repo/shared",
	"version": "0.1.0",
	"private": true,
	"description": "Shared types and utilities for TenantFlow monorepo",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./types/*": {
			"types": "./dist/types/*.d.ts",
			"default": "./dist/types/*.js"
		},
		"./constants/*": {
			"types": "./dist/constants/*.d.ts",
			"default": "./dist/constants/*.js"
		},
		"./lib/*": {
			"types": "./dist/lib/*.d.ts",
			"default": "./dist/lib/*.js"
		},
		"./utils/*": {
			"types": "./dist/utils/*.d.ts",
			"default": "./dist/utils/*.js"
		},
		"./config/*": {
			"types": "./dist/config/*.d.ts",
			"default": "./dist/config/*.js"
		},
		"./security/*": {
			"types": "./dist/security/*.d.ts",
			"default": "./dist/security/*.js"
		},
		"./validation/*": {
			"types": "./dist/validation/*.d.ts",
			"default": "./dist/validation/*.js"
		},
		"./templates/*": {
			"types": "./dist/templates/*.d.ts",
			"default": "./dist/templates/*.js"
		}
	},
	"files": [
		"dist/**"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"typecheck": "tsc --noEmit",
		"lint": "eslint \"src/**/*.ts\" --ignore-pattern \"**/__tests__/**\" --no-error-on-unmatched-pattern --no-warn-ignored",
		"lint:fix": "pnpm lint --fix",
		"update-types": "node scripts/update-supabase-types.js",
		"clean": "rimraf dist .turbo"
	},
	"dependencies": {
		"@supabase/ssr": "catalog:",
		"@supabase/supabase-js": "catalog:",
		"@tanstack/react-query": "5.90.5",
		"zod": "4.1.12"
	},
	"devDependencies": {
		"@types/express": "^5.0.5",
		"@types/node": "catalog:",
		"@types/react": "catalog:",
		"@types/react-dom": "catalog:",
		"eslint": "catalog:",
		"rimraf": "^6.1.0",
		"typescript": "catalog:"
	}
}
