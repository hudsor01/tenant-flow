{
	"$schema": "https://json.schemastore.org/package",
	"name": "@repo/shared",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"description": "Shared types and utilities for TenantFlow monorepo",
	"exports": {
		"./types/*": {
			"types": "./dist/types/*.d.ts",
			"default": "./dist/types/*.js"
		},
		"./types/sections/*": {
			"types": "./dist/types/sections/*.d.ts",
			"default": "./dist/types/sections/*.js"
		},
		"./constants/*": {
			"types": "./dist/constants/*.d.ts",
			"default": "./dist/constants/*.js"
		},
		"./lib/*": {
			"types": "./dist/lib/*.d.ts",
			"default": "./dist/lib/*.js"
		},
		"./utils/*": {
			"types": "./dist/utils/*.d.ts",
			"default": "./dist/utils/*.js"
		},
		"./config/*": {
			"types": "./dist/config/*.d.ts",
			"default": "./dist/config/*.js"
		},
		"./security/*": {
			"types": "./dist/security/*.d.ts",
			"default": "./dist/security/*.js"
		},
		"./validation/*": {
			"types": "./dist/validation/*.d.ts",
			"default": "./dist/validation/*.js"
		},
		"./templates/*": {
			"types": "./dist/templates/*.d.ts",
			"default": "./dist/templates/*.js"
		},
		"./events/*": {
			"types": "./dist/events/*.d.ts",
			"default": "./dist/events/*.js"
		}
	},
	"files": [
		"dist/**"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"typecheck": "tsc --noEmit",
		"lint": "eslint \"src/**/*.ts\" --ignore-pattern \"**/__tests__/**\"",
		"lint:fix": "pnpm lint --fix",
		"clean": "rimraf dist .turbo && find src -name '*.js' -delete && find src -name '*.js.map' -delete",
		"generate:schemas": "supazod -i src/types/supabase.ts -o src/validation/generated-schemas.ts -s public"
	},
	"dependencies": {
		"@supabase/ssr": "catalog:default",
		"@supabase/supabase-js": "catalog:default",
		"@tanstack/react-query": "5.90.12",
		"zod": "catalog:default"
	},
	"devDependencies": {
		"@types/express": "^5.0.5",
		"@types/node": "catalog:default",
		"@types/react": "19.2.7",
		"@types/react-dom": "19.2.3",
		"eslint": "catalog:default",
		"rimraf": "^6.1.2",
		"supazod": "4.1.0",
		"tslib": "2.8.1",
		"typescript": "^5.9.3"
	}
}
