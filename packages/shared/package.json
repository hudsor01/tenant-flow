{
	"$schema": "https://json.schemastore.org/package",
	"name": "@repo/shared",
	"version": "0.1.0",
	"private": true,
	"description": "Shared types and utilities for TenantFlow monorepo",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./types/*": {
			"types": "./dist/types/*.d.ts",
			"default": "./dist/types/*.js"
		},
		"./constants/*": {
			"types": "./dist/constants/*.d.ts",
			"default": "./dist/constants/*.js"
		},
		"./lib/*": {
			"types": "./dist/lib/*.d.ts",
			"default": "./dist/lib/*.js"
		},
		"./utils/*": {
			"types": "./dist/utils/*.d.ts",
			"default": "./dist/utils/*.js"
		},
		"./config/*": {
			"types": "./dist/config/*.d.ts",
			"default": "./dist/config/*.js"
		},
		"./security/*": {
			"types": "./dist/security/*.d.ts",
			"default": "./dist/security/*.js"
		},
		"./validation/*": {
			"types": "./dist/validation/*.d.ts",
			"default": "./dist/validation/*.js"
		}
	},
	"files": [
		"dist/**"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"typecheck": "tsc --noEmit",
		"lint": "eslint \"src/**/*.ts\" --ignore-pattern \"**/__tests__/**\"",
		"lint:fix": "pnpm lint --fix",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"update-types": "node scripts/update-supabase-types.js",
		"clean": "rimraf dist .turbo"
	},
	"dependencies": {
		"@supabase/ssr": "^0.7.0",
		"@supabase/supabase-js": "^2.75.0",
		"zod": "4.1.12"
	},
	"devDependencies": {
		"@types/express": "^5.0.3",
		"@types/node": "^24.7.2",
		"@types/react": "catalog:",
		"@types/react-dom": "catalog:",
		"@vitest/ui": "3.2.4",
		"rimraf": "6.0.1",
		"typescript": "^5.9.3",
		"vitest": "3.2.4"
	}
}
