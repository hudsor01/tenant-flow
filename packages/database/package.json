{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "@repo/database",
	"version": "0.1.0",
	"private": true,
	"description": "Database utilities and types for TenantFlow monorepo",
	"type": "module",
	"files": [
		"dist/**"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"typecheck": "tsc --noEmit",
		"lint": "eslint \"src/**/*.ts\" --no-error-on-unmatched-pattern --no-warn-ignored",
		"lint:fix": "pnpm lint --fix",
		"clean": "rimraf dist .turbo"
	},
	"dependencies": {
		"@supabase/supabase-js": "catalog:"
	},
	"devDependencies": {
		"@eslint/js": "9.38.0",
		"@repo/eslint-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@types/node": "catalog:",
		"eslint": "catalog:",
		"rimraf": "^6.1.0",
		"typescript": "catalog:",
		"typescript-eslint": "^8.46.2"
	}
}
