{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "@repo/database",
	"version": "0.1.0",
	"private": true,
	"description": "Database utilities and types for TenantFlow monorepo",
	"type": "module",
	"files": [
		"dist/**"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"typecheck": "tsc --noEmit",
		"lint": "eslint \"src/**/*.ts\"",
		"lint:fix": "pnpm lint --fix",
		"clean": "rimraf dist .turbo"
	},
	"dependencies": {
		"@supabase/supabase-js": "^2.75.0"
	},
	"devDependencies": {
		"@repo/typescript-config": "workspace:*",
		"@types/node": "^24.7.2",
		"eslint": "9.37.0",
		"globals": "16.4.0",
		"rimraf": "6.0.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.1"
	},
	"overrides": {
		"minimatch": "^10.0.3"
	}
}
