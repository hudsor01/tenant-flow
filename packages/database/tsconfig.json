{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "TenantFlow Database Package Config (Modernized 2025)",
  "extends": "../typescript-config/base.json",
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/generated", "**/*.test.ts", "**/*.spec.ts"],
  "ts-node": {
    "swc": true
  }
}
