{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "TenantFlow Database Package Config (Modernized 2025)",
  "extends": "../typescript-config/node-library.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/generated", "**/*.test.ts", "**/*.spec.ts"],
  "ts-node": {
    "swc": true
  }
}
