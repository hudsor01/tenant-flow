{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "TenantFlow Database Package Config",
	"extends": "@repo/typescript-config/base.json",
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "node",
		"isolatedModules": false,
		"outDir": "./dist",
		"rootDir": "./src",
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"noEmit": false,
		"tsBuildInfoFile": "./dist/.tsbuildinfo"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "src/__tests__", "src/generated"],
	"ts-node": {
		"swc": true
	}
}
