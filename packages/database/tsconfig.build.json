{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo"
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/generated",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}