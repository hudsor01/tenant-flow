{
	"$schema": "https://json.schemastore.org/package",
	"name": "@repo/config",
	"private": true,
	"version": "0.1.0",
	"description": "Centralized runtime configuration helpers for TenantFlow applications.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist/**"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"typecheck": "tsc --noEmit",
		"lint": "eslint \"src/**/*.ts\"",
		"lint:fix": "pnpm lint --fix",
		"clean": "rimraf dist .turbo"
	},
	"dependencies": {
		"zod": "catalog:"
	},
	"devDependencies": {
		"@types/node": "catalog:",
		"rimraf": "6.0.1",
		"typescript": "catalog:"
	}
}
