{
	"extends": "../typescript-config/base.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"noEmit": true,
		"module": "Node16",
		"composite": true,
		"declaration": true,
		"outDir": "./dist",
		"tsBuildInfoFile": "./dist/.tsbuildinfo"
	},
	"include": [
		"*.js",
		"**/*.js",
		"*.cjs",
		"**/*.cjs",
		"*.mjs",
		"**/*.mjs",
		"*.ts",
		"**/*.ts"
	],
	"exclude": ["node_modules", "dist"]
}
