{
	"$schema": "https://json.schemastore.org/package",
	"name": "@repo/api-client",
	"private": true,
	"version": "0.1.0",
	"description": "Type-safe API client utilities for TenantFlow frontend applications.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist/**"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"typecheck": "tsc --noEmit",
		"lint": "eslint \"src/**/*.ts\"",
		"lint:fix": "pnpm lint --fix",
		"test": "vitest run",
		"test:watch": "vitest",
		"clean": "rimraf dist .turbo"
	},
	"dependencies": {
		"@repo/config": "workspace:*",
		"@repo/shared": "workspace:*",
		"@supabase/supabase-js": "^2.75.0"
	},
	"devDependencies": {
		"@types/node": "catalog:",
		"rimraf": "6.0.1",
		"typescript": "catalog:",
		"vitest": "3.2.4"
	}
}
