# Complete Environment Configuration for TenantFlow
# Copy this to .env and update with your values

# PostgreSQL Database (shared by multiple services)
POSTGRES_PASSWORD=your-super-secure-database-password-change-this

# MySQL for Ghost
MYSQL_ROOT_PASSWORD=your-mysql-root-password-change-this
GHOST_DB_PASSWORD=your-ghost-db-password-change-this

# NocoDB Configuration
NOCODB_ADMIN_EMAIL=admin@tenantflow.com
NOCODB_ADMIN_PASSWORD=your-secure-nocodb-password
JWT_SECRET=your-super-secret-jwt-key-minimum-256-bits-change-this-immediately

# Listmonk Configuration
LISTMONK_ADMIN_USER=admin
LISTMONK_ADMIN_PASSWORD=your-secure-listmonk-password

# MeiliSearch Configuration
MEILISEARCH_MASTER_KEY=your-meilisearch-master-key-minimum-16-chars

# Ghost Configuration
GHOST_MAIL_FROM=noreply@tenantflow.com

# Penpot Configuration
PENPOT_SMTP_FROM=noreply@tenantflow.com
PENPOT_SMTP_REPLY_TO=noreply@tenantflow.com

# Resend API for Email (used by Ghost, Penpot, Listmonk)
RESEND_API_KEY=your-resend-api-key-here

# Network Configuration
NETWORK_NAME=tenantflow_network

# Server IP (update with your actual IP)
SERVER_IP=192.168.0.177