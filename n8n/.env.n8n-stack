# n8n Stack Environment Configuration
# Copy this to .env and update with your values

# ===========================================
# DATABASE CREDENTIALS
# ===========================================
POSTGRES_PASSWORD=your-super-secure-postgres-password

# MySQL for Ghost
MYSQL_ROOT_PASSWORD=your-mysql-root-password
GHOST_DB_PASSWORD=your-ghost-db-password

# ===========================================
# n8n CONFIGURATION  
# ===========================================
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your-secure-n8n-password
N8N_WEBHOOK_URL=http://192.168.0.177:5678
TIMEZONE=America/Chicago

# ===========================================
# SERVICE AUTHENTICATION
# ===========================================
# NocoDB (using your port 8088)
JWT_SECRET=your-super-secret-jwt-key-minimum-256-bits
NOCODB_PUBLIC_URL=http://192.168.0.177:8088

# Listmonk
LISTMONK_ADMIN_USER=admin
LISTMONK_ADMIN_PASSWORD=your-secure-listmonk-password

# MeiliSearch
MEILISEARCH_MASTER_KEY=your-meilisearch-master-key-minimum-16-chars

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Resend API for Email (Ghost, Penpot, Listmonk)
RESEND_API_KEY=your-resend-api-key-here

# ===========================================
# URL CONFIGURATION
# ===========================================
# Ghost Blog
GHOST_URL=http://192.168.0.177:2368
GHOST_MAIL_FROM=noreply@tenantflow.com

# Penpot Design Platform
PENPOT_PUBLIC_URL=http://192.168.0.177:9001
PENPOT_SMTP_FROM=noreply@tenantflow.com
PENPOT_SMTP_REPLY_TO=noreply@tenantflow.com

# ===========================================
# NETWORK CONFIGURATION
# ===========================================
SERVER_IP=192.168.0.177